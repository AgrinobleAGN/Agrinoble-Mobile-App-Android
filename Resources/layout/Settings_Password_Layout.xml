<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
	android:background="?attr/colorFill" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	 <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
                app:theme="@style/ToolbarTheme"
            app:title="@string/Lbl_Change_Password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="?attr/colorFill">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/lyt_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp">
            <!--CurrentPassword Section -->
            <LinearLayout
                android:id="@+id/LayoutCurrentPassword"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_key1"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/CurrentPasswordEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/Lbl_Current_Password"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:lines="1"
                    android:inputType="textPassword"
                    android:background="@drawable/round_gray_border"
                    android:layout_marginStart="15dp"
                    android:paddingStart="15dp"/>
            </LinearLayout>     
            <!--NewPassword Section -->
            <LinearLayout
                android:id="@+id/LayoutNewPassword"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_pad_unlock"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/NewPasswordEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/Lbl_New_Password"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:background="@drawable/round_gray_border"
                    android:layout_marginStart="15dp"
                    android:paddingStart="15dp" />
            </LinearLayout>
            <!--RepeatPassword Section -->
            <LinearLayout
                android:id="@+id/LayoutRepeatPassword"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_pad_lock"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/RepeatPasswordEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/Lbl_Repeat_password"
                    android:inputType="textPassword"
                    android:textSize="14sp"
						android:gravity="start|center_vertical"
                    android:background="@drawable/round_gray_border"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:paddingStart="15dp" />
            </LinearLayout> 
            <TextView
                android:id="@+id/linkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3" 
                android:layout_gravity="center"
			    android:padding="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
			    android:text="@string/Lbl_If_you_forgot_your_password"
			    android:textSize="14dp"
                android:textAlignment="gravity" />  
            <Button
                android:id="@+id/SaveButton"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/follow_colored_button"
                android:text="@string/Lbl_Save"
                android:textAllCaps="false"
                android:textColor="@color/gnt_white"
                android:textSize="14sp"/>
            <View 
                android:layout_height="20dp"
                android:layout_width="match_parent" />
            <WoWonder.Helpers.Ads.TemplateView
                android:id="@+id/my_template"
                android:padding="8dp"
                android:visibility="gone"
                app:gnt_template_type="@layout/gnt_medium_template_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" /> 
            <View 
				android:layout_height="?android:attr/actionBarSize"
                android:layout_width="match_parent" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView> 
</androidx.coordinatorlayout.widget.CoordinatorLayout> 