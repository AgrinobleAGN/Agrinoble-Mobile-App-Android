<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/selectableItemBackground"
	android:padding="10dp">

	<TextView
		android:id="@+id/textTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/Lbl_LastBlogs"
		android:textSize="14dp"
		android:textStyle="bold"
		android:layout_gravity="start|center"
		android:textColor="@color/accent"
		android:paddingTop="5dp"  />

	<View
		android:layout_width="match_parent"
		android:layout_height="10dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="120dp"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<com.makeramen.roundedimageview.RoundedImageView
			android:id="@+id/Image"
			android:layout_width="140dp"
			android:layout_height="100dp"
			app:riv_corner_radius="20dp"
			android:src="@drawable/ImagePlacholder"
			android:scaleType="centerCrop"
			android:focusable="false"
			android:clickable="false"
			android:focusableInTouchMode="false" />

		<View
			android:layout_width="15dp"
			android:layout_height="wrap_content"/>

		<LinearLayout
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
            android:layout_weight="1"
			android:orientation="vertical">
			<TextView
				android:id="@+id/Title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxLines="2"
				android:layout_marginEnd="3dp"
				android:textStyle="bold"
				android:layout_gravity="start|center"
				android:gravity="start"
				android:layout_below="@+id/UserImageProfile"
				android:textSize="16dp" />
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"  >
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >
					<ImageView
						android:layout_width="10dp"
						android:layout_height="10dp"
						android:src="@drawable/icon_eyes_vector"/>
					<View
						android:layout_width="5dp"
						android:layout_height="10dp"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="9sp"/>
				</LinearLayout>
				<View
					android:layout_width="20dp"
					android:layout_height="10dp"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >
					<ImageView
						android:layout_width="10dp"
						android:layout_height="10dp"
						android:src="@drawable/ic_action_like_2"
						android:tint="@color/gnt_black"/>
					<View
						android:layout_width="5dp"
						android:layout_height="10dp"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="9sp"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="wrap_content"
				android:layout_height="5dp"/>
			<LinearLayout
				android:id="@+id/UserItem_Layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical">
				<ImageView
					android:id="@+id/UserImageProfile"
					android:scaleType="centerCrop"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/no_profile_image_circle"
					android:layout_marginStart="2dp"
					android:layout_marginTop="0dp" />
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginStart="8dp">
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical">
						<TextView
							android:id="@+id/Username"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/accent"
                            android:drawablePadding="4dp"
							android:textSize="11sp" /> 
					</LinearLayout>
					<TextView
						android:id="@+id/time"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/secondaryText"
						android:textSize="9sp" />
				</LinearLayout>

			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:layout_gravity="start"
			android:gravity="center"
			android:background="@drawable/circle_white"
			android:backgroundTint="@color/accent">
			<ImageView
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:src="@drawable/ic_action_like_2"/>
		</LinearLayout>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="10dp"
		android:background="?attr/colorDivider" />

	<TextView
		android:id="@+id/View_more"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ellipsize="none"
		android:lines="1"
		android:text="@string/Lbl_SeeAll"
		android:textSize="15dp"
		android:textStyle="bold"
		android:padding="10dp"
		android:focusable="false"
		android:clickable="false" />
</LinearLayout>