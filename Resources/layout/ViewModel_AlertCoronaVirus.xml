<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CoronaVirusLayout"
    android:paddingEnd="5dp"
    android:focusable="true"
    android:clickable="true"
	android:paddingBottom="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <View
        android:id="@+id/lineview" 
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="4dp"
        android:layout_height="80dp"
        android:background="@color/accent" />
    <TextView
        android:id="@+id/HeadText"
        android:layout_toEndOf="@+id/lineview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:textStyle="bold"
        android:ellipsize="end" 
        android:lines="1"
        android:maxLines="1"
        android:text="@string/Lbl_CoronaVirus_HeadText"
        android:clickable="false"
        android:textAlignment="textStart" />
    <TextView
        android:id="@+id/subText"
        android:layout_toEndOf="@+id/lineview"
        android:layout_below="@+id/HeadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_in_between"
        android:textSize="12dp"
		android:layout_marginBottom="6dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        android:focusable="false"
        android:text="@string/Lbl_CoronaVirus_SubText"
        android:clickable="false"
        android:textAlignment="textStart" />
</RelativeLayout>