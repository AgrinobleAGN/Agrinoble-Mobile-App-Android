<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    android:clickable="false"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:background="?attr/selectableItemBackground"
    android:focusable="false"
    android:layout_alignParentStart="true"
    android:foregroundGravity="center_horizontal"
    android:gravity="start">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="48dp"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/ImageUser"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:clickable="false"
            android:src="@drawable/no_profile_image" />
        <RelativeLayout
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">
            <Refractored.Controls.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image_view"
                android:src="@drawable/Grey_Offline"
                app:civ_border_color="@color/gnt_white"
                app:civ_border_width="2dp"/>
            <ImageView
                android:id="@+id/smallIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_small_poke"
                android:tint="@color/gnt_white"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical"
        android:focusable="false"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/NotificationsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:clickable="false"
            android:focusable="false"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:textSize="15sp"
            android:maxLines="2"  
            android:textAlignment="textStart" />
        <TextView
            android:id="@+id/NotificationsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/text_color_in_between"
            android:layout_marginTop="3dp"
            android:focusable="false"
            android:clickable="false"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:textSize="13sp"
            android:textAlignment="textStart" />
    </LinearLayout>
</LinearLayout>