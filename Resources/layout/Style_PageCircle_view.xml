<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="vertical" 
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/center_content_profile_scroll_over"
    android:focusable="false"> 
	<ImageView
		android:id="@+id/Image"
		android:scaleType="centerCrop"
		android:layout_width="128dp"
		android:layout_height="128dp"
		android:src="@drawable/no_profile_image"
		android:focusableInTouchMode="false"/>
    <RelativeLayout
	    android:layout_width="60dp"
	    android:layout_height="60dp"
		android:visibility="gone">
	    <refractored.controls.CircleImageView
		    android:id="@+id/ImageCircle"
		    android:layout_width="23dp"
		    android:elevation="0dp" 
		    android:layout_marginBottom="7dp"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentEnd="true"
		    app:civ_border_width="2dp"
		    app:civ_border_color="@color/textIcon"
		    android:src="@drawable/circlegradient4"
		    android:layout_height="23dp" />
	    <TextView
		    android:id="@+id/Icon"
		    android:scaleType="centerCrop"
		    android:layout_width="13dp" 
		    android:layout_height="13dp"
		    android:layout_marginEnd="4.6dp"
		    android:layout_marginBottom="11.9dp"
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:textColor="@color/textLight_color"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentEnd="true"
		    android:text="T"
		    android:textSize="12sp"
		    android:focusableInTouchMode="false" /> 
    </RelativeLayout>
    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textSize="13sp"
		
        android:layout_margin="5dp"
        android:focusable="false"
        android:clickable="false" />
</LinearLayout>