<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"  >
    <ImageView
      android:id="@+id/livestreamingHeader_streamerImage"
      android:scaleType="centerCrop"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:focusable="false"
      android:clickable="false"
      android:src="@drawable/no_profile_image_circle"
      android:layout_marginStart="15dp" />
    
    <TextView
      android:id="@+id/livestreamingHeader_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:lines="1"
      android:drawablePadding="4dp"
      android:layout_marginStart="10dp"
      android:textSize="@dimen/msg_text_primary" 
      android:textStyle="bold"
      android:clickable="false"
      android:layout_marginEnd="100dp"
      android:layout_marginTop="1dp"
      android:paddingEnd="10dp"
      android:focusable="false"
      android:layout_toEndOf="@+id/livestreamingHeader_streamerImage"
      android:gravity="start"
      android:textAlignment="textStart" />

    <TextView
      android:id="@+id/livestreamingHeader_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:lines="1"
      android:text="00:00" 
      android:layout_below="@+id/livestreamingHeader_streamerImage"
      android:background="@drawable/bg_livestreaming_rounded_rect_red_carrot"
      android:textColor="@color/gnt_white"
      android:textSize="@dimen/msg_text_secondary"
      android:layout_marginStart="10dp"
      android:layout_marginTop="2dp"
      android:focusable="false"
      android:paddingEnd="10dp"
      android:paddingStart="10dp"
      android:clickable="false"
      android:gravity="start"
      android:textAlignment="textStart" />
    
</RelativeLayout>
  