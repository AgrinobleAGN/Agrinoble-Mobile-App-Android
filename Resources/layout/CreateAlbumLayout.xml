<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
	android:background="?attr/colorFill"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
                app:theme="@style/ToolbarTheme"
            app:title="@string/Lbl_CreateAlbum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="?attr/colorFill">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Add"
                android:layout_gravity="end"
                android:textSize="15sp"
                android:textStyle="bold" 
                android:padding="15dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/toolbar_title" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:background="?attr/colorFill"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="fill_vertical"
            android:layout_below="@+id/title_pic_s03">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_step1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:padding="16dp"
                    android:orientation="vertical" 
                    android:visibility="visible">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_AlbumName"
                        android:textSize="15sp"
                        android:textColor="@color/accent"/> 
                    <EditText
                        android:id="@+id/NameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" 
                        android:background="@drawable/round_gray_border"
                        android:layout_marginTop="20dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="7dp" 
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp" 
                        android:textSize="14sp"
                        android:hint="@string/Lbl_AlbumName"/>
                </LinearLayout> 
                <RelativeLayout
                    android:id="@+id/rl_step2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_empty_albums"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/follow_button_profile_friends_pressed"
                android:textSize="14sp"
                android:textColor="@color/gnt_white"
                android:text="@string/Lbl_CreateAlbum"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"/>
            <View 
				android:layout_height="?android:attr/actionBarSize"
                android:layout_width="match_parent" />

            <com.google.android.gms.ads.doubleclick.PublisherAdView
	            android:id="@+id/multiple_ad_sizes_view"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            app:adSize="MEDIUM_RECTANGLE,120x20,250x250,320x100,SMART_BANNER"
	            app:adUnitId="@string/banner_multiple_ad_sizes_id" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>