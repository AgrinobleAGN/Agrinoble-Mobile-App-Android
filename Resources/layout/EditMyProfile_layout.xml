<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	 <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
                app:theme="@style/ToolbarTheme"
            app:title="@string/Lbl_Edit_Profile_and_avatar"
            app:titleTextColor="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="?attr/colorFill">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
   <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:id="@+id/lyt_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <!--Name Section -->
                <LinearLayout
                    android:id="@+id/LayoutName"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/IconName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile_user"/>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/FirstNameEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_weight="50"
                        android:layout_marginStart="15dp"
                        android:ems="10"
                        android:layout_height="45dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:hint="@string/Lbl_First_Name"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:paddingStart="15dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="7dp"
						 android:gravity="center_vertical"
                        android:inputType="textEmailAddress" />
                    <EditText
                        android:id="@+id/LastNameEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_weight="50"
                        android:ems="10"
                        android:layout_height="45dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:hint="@string/Lbl_Last_Name"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:paddingStart="15dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="7dp"
                        android:gravity="center_vertical"
                        android:inputType="textEmailAddress"
                        android:layout_marginStart="10dp" />
                </LinearLayout>
                <!--Location Section -->
                <LinearLayout
                    android:id="@+id/LayoutLocation"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/IconLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile_pin"/>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/LocationEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/round_gray_border"
                        android:hint="@string/Lbl_Location"
                        android:textSize="14sp"
                        android:gravity="start"
                        android:paddingTop="6dp"
                        android:paddingStart="15dp"
                        android:layout_alignParentEnd="true" />
                </LinearLayout>
                <!--Phone Section -->
                <LinearLayout
                    android:id="@+id/LayoutPhone"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/IconPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile_smartphone"/>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/PhoneEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="15dp"
                        android:hint="@string/Lbl_Mobile"
						android:inputType="phone"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:singleLine="true"
						android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true" />
                </LinearLayout>
                <!--Website Section -->
                <LinearLayout
                    android:id="@+id/LayoutWebsite"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/IconWebsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile_website"/>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/WebsiteEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="15dp"
                        android:hint="@string/Lbl_website"
						 android:inputType="textWebEmailAddress"
                        android:textSize="14sp"
						 android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true" />
                </LinearLayout>
                <!--WorkStatus Section -->
                <LinearLayout
                    android:id="@+id/LayoutWorkStatus"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/IconWorkStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile_suitcase"/>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/WorkStatusEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="15dp"
                        android:hint="@string/Lbl_Work_Place"
                        android:textSize="14sp"
						 android:gravity="center_vertical"
                        android:background="@drawable/round_gray_border"
                        android:paddingStart="15dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="7dp"
                        android:layout_alignParentEnd="true" />
                </LinearLayout>
                <!--School Section -->
                <LinearLayout
                    android:id="@+id/LayoutSchool"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/IconSchool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile_home"/>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/SchoolEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="15dp"
                        android:hint="@string/Lbl_School"
                        android:textSize="14sp"
						android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true" />
                </LinearLayout>     
                <!--Relationship Section -->
                <LinearLayout
                    android:id="@+id/LayoutRelationship"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" 
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/IconRelationship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile_heart"/>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/RelationshipEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="15dp"
                        android:hint="@string/Lbl_Relationship"
                        android:textSize="14sp"
						 android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="7dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"/>
                </LinearLayout> 
                <Button
                    android:id="@+id/SaveButton"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/follow_colored_button"
                    android:text="@string/Lbl_Save"
                    android:textAllCaps="false"
                    android:textColor="@color/gnt_white"
                    android:textSize="14sp"/>
                <View 
				    android:layout_height="?android:attr/actionBarSize"
                    android:layout_width="match_parent" /> 
                <com.google.android.gms.ads.doubleclick.PublisherAdView
	                android:id="@+id/multiple_ad_sizes_view"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentBottom="true"
	                android:layout_centerHorizontal="true"
	                app:adSize="MEDIUM_RECTANGLE,120x20,250x250,320x100,SMART_BANNER"
	                app:adUnitId="@string/banner_multiple_ad_sizes_id" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView> 
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>