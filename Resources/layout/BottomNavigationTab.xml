<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomnavigationtab"
    android:layout_width="match_parent"
	android:layout_height="50dp"
	android:layout_gravity="bottom"
	android:clipToPadding="true" 
    android:layout_marginTop="3dp" 
    app:cardBackgroundColor="?attr/colorFill"
	app:cardCornerRadius="8dp"
	app:cardElevation="3dp"
	app:cardPreventCornerOverlap="false"
	app:cardUseCompatPadding="false">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_gravity="bottom"
		android:weightSum="4">
		<LinearLayout
			android:id="@+id/llHome"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:background="?attr/selectableItemBackground"
			android:orientation="vertical">
			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:padding="9dp"
				android:id="@+id/ivHome"
				android:tint="@color/accent"
				android:src="@drawable/icon_home_vector" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/llNotification"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:background="?attr/selectableItemBackground"
			android:orientation="vertical">
			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:padding="9dp"
				android:id="@+id/ivNotification"
				android:tint="#bfbfbf"
				android:src="@drawable/icon_notification_vector" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/llTrending"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:background="?attr/selectableItemBackground"
			android:orientation="vertical">
			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:padding="9dp"
				android:id="@+id/ivTrending"
				android:tint="#bfbfbf"
				android:src="@drawable/icon_fire_vector" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/llMore"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:background="?attr/selectableItemBackground"
			android:orientation="vertical">
			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:padding="9dp"
				android:id="@+id/ivMore"
				android:tint="#bfbfbf"
				android:src="@drawable/ic_menu" />
		</LinearLayout>

	</LinearLayout> 
</androidx.cardview.widget.CardView> 