<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--rating Page-->
    <LinearLayout
        android:id="@+id/ratingLiner"
        android:layout_below="@+id/liner2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp"
        android:weightSum="4"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:foregroundGravity="center|center_horizontal"
        android:gravity="center_vertical|start">
        <TextView
            android:id="@+id/ratingtextview"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="@string/Lbl_ratings"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:layout_weight="0.6"
            android:layout_marginStart="0dp"
            android:foregroundGravity="center"
            android:gravity="center" />
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_marginTop="-2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/liner2"
            android:stepSize="1"
            android:rating="3.7"
            android:secondaryProgressTint="@android:color/transparent"
            android:progressTint="#FF9800"
            android:foregroundGravity="center"
            android:gravity="center" />
    </LinearLayout>
    <!--Page Like Count-->
    <LinearLayout
        android:id="@+id/liner3"
        android:layout_below="@+id/ratingLiner"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:id="@+id/IconLike"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_like_1"/>
        <TextView
            android:id="@+id/LikeCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:maxLines="1"/>
    </LinearLayout>
    <!--Page Category-->
    <LinearLayout
        android:id="@+id/liner4"
        android:layout_below="@+id/liner3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:id="@+id/IconCategory"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_price_tag"/>
        <TextView
            android:id="@+id/CategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:maxLines="1" />
    </LinearLayout>
    <!--Page Members-->
    <LinearLayout
        android:id="@+id/liner5"
        android:layout_below="@+id/liner4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:id="@+id/IconMembers"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_add_friends"/>
        <TextView
            android:id="@+id/MembersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:text="@string/Lbl_InviteFriendsToPage"
            android:maxLines="1"/>
    </LinearLayout>
</LinearLayout>