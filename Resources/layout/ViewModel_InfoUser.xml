<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Lbl_ProfileDetails"
        android:textAllCaps="true"
        android:textSize="15sp"
        />-->
  
    <!--Pro Section -->
    <LinearLayout
        android:id="@+id/LayoutPro"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_member"  
        android:tint="@color/accent"/>
        <TextView
            android:id="@+id/ProText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:maxLines="1"/>
    </LinearLayout>
    <!--Website Section -->
    <LinearLayout
        android:id="@+id/LayoutWebsite"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_profile_website"
        android:tint="@color/accent"/>
        <TextView
            android:id="@+id/WebsiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:maxLines="1"/>
    </LinearLayout>
    <!--Gander Section -->
    <LinearLayout
        android:id="@+id/LayoutGander"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_action_genders"
        android:tint="@color/accent"/>
        <TextView
            android:id="@+id/GanderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:maxLines="1"/>
    </LinearLayout>
    <!--Birthday Section -->
    <LinearLayout
        android:id="@+id/LayoutBirthday"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_action_birthday"
        android:tint="@color/accent"/>
        <TextView
            android:id="@+id/BirthdayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:maxLines="1"/>
    </LinearLayout>
    <!--Work Section -->
    <LinearLayout
        android:id="@+id/LayoutWork"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_profile_suitcase"
        android:tint="@color/accent"/>
        <TextView
            android:id="@+id/WorkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:maxLines="1"/>
    </LinearLayout>
    <!--Live Section -->
    <LinearLayout
        android:id="@+id/LayoutLive"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_profile_home"
        android:tint="@color/accent"/>
        <TextView
            android:id="@+id/LiveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:maxLines="1"/>
    </LinearLayout>
    <!--Study Section -->
    <LinearLayout
        android:id="@+id/LayoutStudy"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_layers"
        android:tint="@color/accent"/>
        <TextView
            android:id="@+id/StudyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:maxLines="1"/>
    </LinearLayout>
    <!--Relationship Section -->
    <LinearLayout
        android:id="@+id/LayoutRelationship"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical|start">
      <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_profile_heart"
        android:tint="@color/accent"/>
        <TextView
            android:id="@+id/RelationshipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:maxLines="1"/>
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="5dp"
      android:background="?attr/colorDivider" />

</LinearLayout>