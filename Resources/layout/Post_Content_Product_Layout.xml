<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:focusable="true" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:id="@+id/contentPost"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_below="@+id/description"
        android:maxHeight="300dp"
        android:clickable="false"
        android:focusable="false"
        android:minHeight="150dp"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:src="@drawable/imageplacholder"
        app:riv_corner_radius="4dp"/>
    <LinearLayout
        android:id="@+id/PinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/image"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">
        <TextView
            android:id="@+id/postProductLocationText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="13sp"
            android:drawableStart="@drawable/ic_pin"
            android:drawableTint="#F85C50"
            android:drawablePadding="10dp"
            android:maxLines="2"/>
        <TextView
            android:id="@+id/typeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/shape_radius_btn"
            android:backgroundTint="#028A19"
            android:textSize="11sp"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/statusText"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#8718F7"
            android:background="@drawable/shape_radius_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/Lbl_In_Stock"
            android:textSize="11sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/TitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/PinLayout"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">
        <TextView
            android:id="@+id/postProductTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="23sp" />
        <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/accent"
            android:textSize="23sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/postProductContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleLayout"
        android:layout_margin="10dp"
        android:lineSpacingExtra="3dp"
        android:textSize="15sp"
        android:maxLines="2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/postProductContent"
        android:background="?attr/colorBubble"/>
</RelativeLayout>