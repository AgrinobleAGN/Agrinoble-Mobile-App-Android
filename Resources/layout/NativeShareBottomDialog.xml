<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ShareTimelineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:padding="15dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/StImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_timeline"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <TextView
            android:id="@+id/St_1"
            android:layout_width="0dp"
            android:layout_weight="2.7"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/Lbl_ShareToMyTimeline"
            
            android:gravity="start|center"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ShareGroupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:padding="15dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/StImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_group"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <TextView
            android:id="@+id/St_1"
            android:layout_width="0dp"
            android:layout_weight="2.7"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/Lbl_ShareToGroup"
            
            android:gravity="start|center"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ShareOptionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:padding="15dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/StImage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_more"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <TextView
            android:id="@+id/St_3"
            android:layout_width="0dp"
            android:layout_weight="2.7"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/Lbl_MoreOptions"
            
            android:gravity="start|center"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/SharePageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:padding="15dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/StImage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_flag"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <TextView
            android:id="@+id/St_4"
            android:layout_width="0dp"
            android:layout_weight="2.7"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/Lbl_ShareToPage"
            
            android:gravity="start|center"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>