<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:focusable="true"
	android:clickable="true"
	android:background="@drawable/center_content_profile_scroll_over"
	android:layout_marginEnd="15dp"
	android:layout_marginStart="15dp"
	android:layout_marginTop="10dp"
	android:layout_marginBottom="2dp"
	android:foreground="?android:attr/selectableItemBackground"
	android:id="@+id/info_container"
	android:layout_width="match_parent"
	android:layout_height="320dp"
	android:orientation="vertical"
	android:layout_gravity="center_horizontal">
	<ImageView
		android:id="@+id/fundImage"
		android:layout_alignParentTop="true"
		android:scaleType="centerCrop"
		android:layout_width="match_parent"
		android:layout_height="175dp"
		android:maxHeight="175dp"
		android:minHeight="150dp"
		android:focusable="false"
		android:clickable="false"
		android:src="@drawable/ImagePlacholder"
		android:focusableInTouchMode="false" />
	<TextView
		android:id="@+id/catText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:textColor="@color/textLight_color"
		android:textSize="13dp"
		android:text="@string/Lbl_Funding"
		android:ellipsize="none"
		android:layout_alignParentEnd="true"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="10dp"
		android:layout_marginTop="6dp"
		android:paddingEnd="9dp"
		android:paddingStart="9dp"
		android:paddingTop="4dp"
		android:paddingBottom="4dp"
		android:backgroundTint="#BE5D77"
		android:background="@drawable/shape_radius_btn"
		android:focusable="false"
		android:clickable="false"
		android:layout_alignParentTop="true" />
	<TextView
		android:id="@+id/fundTitle"
		android:layout_below="@+id/fundImage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:maxLines="2"
		android:layout_marginEnd="6dp"
		android:layout_marginStart="10dp"
		android:textStyle="bold"
		android:textSize="15sp" />
	<TextView
		android:layout_below="@+id/fundTitle"
		android:id="@+id/fundDescription"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:ellipsize="none"
		android:lines="1"
		android:layout_marginEnd="6dp"
		android:layout_marginStart="10dp"
		android:textColor="@color/text_color_in_between"
		android:textSize="14dp"
		android:layout_marginTop="6dp" />
	<TextView
		android:id="@+id/raised"
		android:layout_below="@+id/fundDescription"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="none"
		android:layout_alignParentStart="true"
		android:maxLines="1"
		android:textColor="@color/primary"
		android:textSize="14dp"
		android:textStyle="bold"
		android:layout_marginTop="15dp"
		android:layout_marginEnd="6dp"
		android:layout_marginStart="10dp" />
	<TextView
		android:layout_below="@+id/fundDescription"
		android:id="@+id/TottalAmount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="none"
		android:maxLines="1"
		android:layout_alignParentEnd="true"
		android:textSize="14dp"
		android:textStyle="bold"
		android:layout_marginTop="15dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="10dp" />
	<ProgressBar
		android:layout_below="@+id/raised"
		android:id="@+id/progressBar"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="5dp"
		android:layout_marginBottom="7dp"
		android:layout_marginTop="7dp"
		android:progressDrawable="@drawable/gradient_progress"
		android:indeterminate="false"
		android:gravity="center"
		android:max="100"
		android:minHeight="50dp"
		android:minWidth="200dp"
		android:layout_marginEnd="9dp"
		android:layout_marginStart="10dp"
		android:progress="95" />
	<TextView
		android:layout_below="@+id/progressBar"
		android:id="@+id/time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="none"
		android:lines="1"
		android:textStyle="normal"
		android:drawableStart="@drawable/icon_clock_vector"
		android:layout_marginBottom="8dp"
		android:layout_marginTop="4dp"
		android:layout_alignParentStart="true"
		android:padding="2dp"
		android:layout_marginEnd="6dp"
		android:layout_marginStart="10dp"
		android:drawablePadding="5dp"
		android:drawableTint="@color/text_color_in_between"
		android:textColor="@color/text_color_in_between"
		android:textSize="13dp" />
	<TextView
		android:id="@+id/collected"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="none"
		android:lines="1"
		android:layout_below="@+id/progressBar"
		android:layout_marginBottom="8dp"
		android:layout_marginTop="5dp"
		android:textStyle="normal"
		android:layout_alignParentEnd="true"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="7dp"
		android:text="@string/Lbl_Collected"
		android:textColor="@color/text_color_in_between"
		android:textSize="13dp" />
</RelativeLayout> 