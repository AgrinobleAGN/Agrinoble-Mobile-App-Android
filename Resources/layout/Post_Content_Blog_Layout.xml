<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/center_content_profile_scroll_over"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2dp"
    android:id="@+id/linklinearLayout"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageblog"
        android:maxHeight="165dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140dp"
        android:layout_marginBottom="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/Cover_image"
        android:layout_marginTop="0dp"
        app:riv_corner_radius="5dp"/>
    <TextView
        android:id="@+id/catText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/textLight_color"
        android:textSize="13dp"
        android:ellipsize="none"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:backgroundTint="#FF6600"
        android:background="@drawable/shape_radius_btn"
        android:layout_alignParentTop="true" />
    <ImageView
        android:layout_below="@+id/imageblog"
        android:id="@+id/blogIcon"
        android:tint="#FF6600"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_post_blog_vector"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:visibility="gone"/>
    <TextView
        android:layout_toEndOf="@+id/blogIcon"
        android:layout_below="@+id/imageblog"
        android:id="@+id/postblogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingStart="2dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="3dp"
        android:paddingTop="3dp"
        android:maxLines="2"
        android:inputType="textMultiLine"
        android:textSize="15sp"
        />
    <TextView
        android:layout_below="@+id/postblogText"
        android:id="@+id/postBlogContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:paddingTop="2dp"
        android:maxLines="3"
        android:textSize="14sp"
        />
</RelativeLayout>
  