<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:orientation="vertical"
		android:id="@+id/playerrootpage"
		android:background="?attr/colorFill"
		android:clickable="true"
		android:focusable="false"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/footer">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<FrameLayout
				android:id="@+id/root"
				android:clickable="true"
				android:layout_width="match_parent"
				android:layout_height="220dp"
				android:minHeight="220dp"
				android:keepScreenOn="true">
				<com.google.android.exoplayer2.ui.PlayerView
					android:id="@+id/player_view"
					android:layout_width="match_parent"
					android:layout_height="220dp"
					android:minHeight="220dp"
					app:resize_mode="fill"
					app:use_controller="true"
					app:rewind_increment="3000"
					app:fastforward_increment="3000"
					app:auto_show="true"
					app:surface_type="surface_view"
					app:controller_layout_id="@layout/exo_playback_control_view"/>
			</FrameLayout>

			<androidx.core.widget.NestedScrollView
				android:id="@+id/NestedScrollView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scrollbars="vertical"
				app:layout_behavior="@string/appbar_scrolling_view_behavior">
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="15dp"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/iv_avatar"
							android:layout_width="38dp"
							android:layout_height="38dp"
							android:src="@drawable/no_profile_image_circle"/>
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginStart="10dp"
							android:orientation="vertical">
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:gravity="center_vertical">
								<TextView
									android:id="@+id/Title"
									android:layout_width="0dp"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:ellipsize="end"
									android:lines="1"
									android:textSize="16sp"
                                />
								<ImageView
									android:id="@+id/iv_more"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:src="@drawable/ic_more_vector"/>
							</LinearLayout>
							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:gravity="center_vertical"
								android:weightSum="100">
								<TextView
									android:id="@+id/tv_subname"
									android:layout_width="0dp"
									android:layout_weight="40"
									android:layout_height="wrap_content"
									android:textSize="12sp"
                                />
								<TextView
									android:id="@+id/Views_Count"
									android:layout_width="0dp"
									android:layout_weight="30"
									android:layout_height="wrap_content"
									android:ellipsize="none"
									android:lines="1"
									android:textSize="12sp"
									android:focusable="false"
									android:clickable="false" />
								<TextView
									android:id="@+id/tv_time"
									android:layout_width="0dp"
									android:layout_weight="30"
									android:layout_height="wrap_content"
									android:textSize="12sp"
                                />
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="15dp"
						android:orientation="vertical">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="15sp"
							android:textColor="@color/accent"
							android:text="@string/Lbl_Summary"/>
						<com.luseen.autolinklibrary.AutoLinkTextView
							android:id="@+id/videoDescriptionTextview"
							android:layout_gravity="start"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="14sp"
							android:layout_marginTop="10dp" />
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="15dp"
						android:orientation="vertical">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="15sp"
							android:textColor="@color/accent"
							android:text="@string/Lbl_Category"/>
						<TextView
							android:id="@+id/videoCategorytextview"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textSize="14sp"
							android:includeFontPadding="false"
							android:layout_marginTop="10dp"
                         />
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="15dp"
						android:orientation="vertical">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="15sp"
							android:textColor="@color/accent"
							android:text="@string/Lbl_Stars"/>
						<TextView
							android:id="@+id/videoStartextview"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="14sp"
							android:includeFontPadding="false"
							android:layout_marginTop="10dp"
                        />
					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="15dp"
						android:orientation="vertical">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="15sp"
							android:textColor="@color/accent"
							android:text="@string/Lbl_Tag"/>
						<TextView
							android:id="@+id/videoTagtextview"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="14sp"
							android:includeFontPadding="false"
							android:layout_marginTop="10dp"
                        />
					</LinearLayout>
					<include
						layout="@layout/post_devider"/>
					<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/recyler"
						android:clickable="true"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:scrollbars="vertical"  />
					<com.google.android.gms.ads.AdView
						android:id="@+id/adView"
						app:adSize="SMART_BANNER"
						app:adUnitId="@string/banner_ad_unit_id"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="4dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content" />
				</LinearLayout>
			</androidx.core.widget.NestedScrollView>



		</LinearLayout>

	</androidx.coordinatorlayout.widget.CoordinatorLayout>

	<LinearLayout
		android:id="@+id/footer"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="?attr/colorFill"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		android:gravity="start|center_vertical">
		<ImageView
			android:id="@+id/avatar"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_marginStart="15dp"
			android:src="@drawable/no_profile_image_circle"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="10dp"
			android:layout_marginEnd="7dp"
			android:orientation="horizontal"
			android:backgroundTint="?attr/colorBubble"
			android:background="@drawable/shape_rectangle_white_round_corner_signin_four"
			android:gravity="start|center_vertical">
			<com.aghajari.emojiview.view.AXEmojiEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/commenttext"
                android:background="@null"
                android:textSize="16sp"
                android:maxLines="4"
                android:imeOptions="actionSend" 
                android:inputType="textCapSentences|textMultiLine|textShortMessage"
                android:hint="@string/Lbl_Write_comment"
                android:textColorHint="?attr/colorReact"
                android:paddingStart="15dp"  />
			<ImageView
				android:id="@+id/Emojiicon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:foreground="?attr/selectableItemBackgroundBorderless"
				android:focusable="false"
				android:clickable="false"
				android:padding="4dp"
				android:tint="?attr/colorReact"
				android:layout_gravity="center_vertical"
				android:scaleType="fitCenter"
				android:src="@drawable/ic_sticker_vector" />
			<ImageView
				android:id="@+id/send"
				android:layout_width="wrap_content"
				android:layout_marginEnd="7dp"
				android:layout_height="wrap_content"
				android:foreground="?attr/selectableItemBackgroundBorderless"
				android:focusable="false"
				android:clickable="false"
				android:padding="4dp"
				android:tint="?attr/colorReact"
				android:layout_gravity="center_vertical"
				android:scaleType="fitCenter"
				android:src="@drawable/ic_send_vector" />
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>