<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:background="?attr/colorFill"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:background="?attr/colorFill"
            app:elevation="1dp"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll">
                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_collapseMode="parallax"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:minHeight="250dp"
                        android:layout_height="355dp">
                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="5dp"
                            app:ci_drawable="@drawable/white_radius"
                            app:ci_drawable_unselected="@drawable/black_radius" />
                    </FrameLayout>
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:layout_marginEnd="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="16dp"
                        android:src="@drawable/ic_action_left_arrow2"
                        android:paddingTop="15dp" />
                    <ImageView
                        android:id="@+id/Image_more"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:paddingBottom="16dp"
                        android:src="@drawable/icon_more2"
                        android:tint="@color/gnt_white"
                        android:paddingTop="15dp" />
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/ScrollView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_product_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="?attr/colorFill"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                android:layout_gravity="end">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorFill"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical"> 
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent"/>
                        <TextView
                            android:id="@+id/BoleanNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_button_pressed"
                            android:backgroundTint="#028A19"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:text="@string/Radio_New"
                            android:textColor="@color/textLight_color"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/BoleanInStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/round_button_pressed"
                            android:backgroundTint="#8718F7"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:text="@string/Lbl_In_Stock"
                            android:textColor="@color/textLight_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_product_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:gravity="start">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="22dp"
                            android:textSize="27sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_price"
                            android:text="@string/Lbl_Description"
                            android:textSize="15sp"
                            android:textColor="@color/accent"/>
                        <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
                            android:id="@+id/tv_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:lineSpacingExtra="3dp"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/locationLayout" 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">
                        <RelativeLayout
                            android:layout_width="15dp"
                            android:layout_height="15dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/post_icon_pin"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tv_Location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:lineSpacingExtra="3dp"
                            android:textSize="13sp"
                            android:textColor="#7F8E9D"
                            android:lines="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">
                        <ImageView
                            android:id="@+id/card_pro_pic"
                            android:scaleType="centerCrop"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/no_profile_image" />
                        <TextView
                            android:id="@+id/card_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/Btn_Contact"
                            android:textColor="#7F8E9D"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/card_dist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card_name"
                            android:layout_marginStart="20dp"
                            android:textColor="#7F8E9D"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/cont"
                        android:textSize="15sp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/round_button_normal"
                        android:tag="false"
                        android:paddingTop="8dp"
                        android:paddingStart="7dp"
                        android:paddingEnd="7dp"
                        android:paddingBottom="8dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:text="@string/Btn_Contact"
                        android:textColor="@color/accent" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="30dp"
                        android:background="?attr/colorDivider"/>
                    <include
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
                        layout="@layout/post_buttomsection_layout"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorDivider" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="10dp" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>