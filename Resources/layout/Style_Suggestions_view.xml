<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="?attr/selectableItemBackground">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="?attr/colorFill"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView 
                android:id="@+id/people_profile_sos"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_profile_image" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
	            android:lines="1" 
                android:textStyle="bold" />
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
            <Button
                android:background="@drawable/buttonFlat"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="@string/Lbl_Follow"
                android:textColor="@color/textLight_color"
                android:textSize="16sp"
                android:clickable="true"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:id="@+id/FollowButton" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>