<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_weight="10"
	android:orientation="vertical">
	<LinearLayout
          android:id="@+id/addLayout"
		android:layout_width="match_parent"
		android:layout_height="75dp"
        android:background="?android:selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
		android:orientation="horizontal"
		android:gravity="center_vertical">
		<refractored.controls.CircleImageView
			android:id="@+id/image"
			android:layout_weight="0"
			android:layout_width="40dp"
			android:layout_marginStart="16dp"
			android:layout_height="40dp"
			android:layout_gravity="center"
			android:layout_centerVertical="true"
			android:layout_alignParentStart="true"
			android:scaleType="centerCrop"
			app:civ_border_width="1dp"
			app:civ_border_color="@color/textLight_color"
			android:src="@drawable/Cover_image" />
		<LinearLayout
			android:id="@+id/ll_post_text"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center_vertical"
			android:layout_marginStart="13dp">

			<TextView
				android:id="@+id/postText"
				
				android:layout_toEndOf="@+id/image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center_vertical"
				android:layout_centerVertical="true"
				android:lines="1"
				android:text="@string/Lbl_Whats_Going_On"
				
				android:textSize="15sp" />
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="3dp"
				android:text="@string/Lbl_TypeSomethingsHere"
				android:textSize="15sp"
				android:textColor="@color/text_color_in_between"/>

		</LinearLayout> 
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:orientation="horizontal">
		<RelativeLayout
			android:id="@+id/rlPostGallery"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:orientation="horizontal">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/icon_photo"
					android:tint="@color/colorMore4"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginStart="10dp"
					android:text="@string/Lbl_Gallery"
					android:gravity="center_vertical"
					android:textSize="13sp"
					android:textColor="@color/text_color_in_between"/>
			</LinearLayout>
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlPostFriend"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:orientation="horizontal">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/icon_friends"
					android:tint="#2D8FCF"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginStart="10dp"
					android:text="@string/Lbl_Friend"
					android:gravity="center_vertical"
					android:textSize="13sp"
					android:textColor="@color/text_color_in_between"/>
			</LinearLayout>
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlPostLive"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:orientation="horizontal">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/icon_video_camera"
					android:tint="@color/primary"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginStart="10dp"
					android:text="@string/Lbl_PostLive"
					android:gravity="center_vertical"
					android:textSize="13sp"
					android:textColor="@color/text_color_in_between"/>
			</LinearLayout>
		</RelativeLayout>

	</LinearLayout>

  <include
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
      layout="@layout/post_devider"/>

</LinearLayout>
