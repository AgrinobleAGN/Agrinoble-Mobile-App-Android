<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/colorFill">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="false"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"> 
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="15dp">
                <TextView
                    android:id="@+id/tv_recommend" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/Lbl_RecommendForYou"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_viewall1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:textColor="@color/accent"
                    android:text="@string/Lbl_ViewAll" 
                    android:visibility="gone"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommend_recyler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_recommend"
                    android:layout_marginTop="15dp"
                    android:scrollbars="horizontal"  />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:gravity="start"
                android:padding="15dp">
                <TextView
                    android:id="@+id/tv_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Popular Products"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_viewall2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:textColor="@color/accent"
                    android:text="@string/Lbl_ViewAll"
                    android:visibility="gone"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/popular_recyler"
                    android:layout_below="@+id/tv_popular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:scrollbars="vertical"  />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/bannerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical" />
        </RelativeLayout>  
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <ViewStub
        android:id="@+id/viewStub"
        android:inflatedId="@+id/subView"
        android:layout="@layout/EmptyStateLayout"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>