<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_content"
    android:background="?attr/colorFill"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_gravity="start"
            android:layout_marginStart="11dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:tint="?attr/colorReact"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_action_left_arrow2" />
        <TextView
            android:id="@+id/replyCountTextview"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginStart="11dp"
            android:gravity="center"
            android:text="@string/Lbl_Replies" />
    </RelativeLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="false"
                android:background="@android:color/transparent"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleTextAppearance="@android:color/transparent"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:scrimAnimationDuration="100">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="1dp"
                    android:background="?attr/colorFill"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"> 
                    <ViewStub
                        android:id="@+id/comment_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorFill"
                        android:layout_weight="0" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:id="@+id/divider2"
                        android:layout_marginTop="2dp"
                        android:background="?attr/colorDivider"
                        android:layout_weight="0" />
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="55dp"
            android:layout_marginBottom="40dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:id="@+id/divider2"
            android:background="?attr/colorDivider"
            android:layout_weight="0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom|center"
        android:id="@+id/commentLayout"
        android:background="?attr/colorFill" 
        android:orientation="horizontal">
	    <ImageView
		    android:id="@+id/emojiicon"
		    android:layout_width="25dp"
		    android:layout_height="match_parent"
		    android:src="@drawable/ic_action_sentiment_satisfied_alt"
		    android:scaleType="fitCenter"
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:layout_marginStart="5dp" />
	    <com.aghajari.emojiview.view.AXEmojiEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/commenttext"
            android:background="@null"
            android:textSize="16sp"
            android:maxLines="4"
            android:imeOptions="actionSend"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:inputType="textCapSentences|textMultiLine"
            android:hint="@string/Lbl_AddCommentHere"
            android:textColorHint="?attr/colorReact" /> 
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/image"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_action_AddPost"
            android:padding="6dp"
            android:layout_weight="0" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:padding="1dp"
            android:id="@+id/send"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_send"
            android:layout_weight="0" />
    </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>