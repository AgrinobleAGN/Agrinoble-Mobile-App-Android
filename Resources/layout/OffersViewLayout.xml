<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:background="?attr/colorFill"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="?attr/colorFill"
        app:elevation="1dp"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_collapseMode="parallax"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/offerCoverImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="350dp"
                        android:minHeight="300dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imageplacholder"
                        android:visibility="visible" />
                    <ImageButton
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginStart="11dp"
                        android:padding="15dp"
                        android:background="@null"
                        android:src="@drawable/ic_action_left_arrow2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_More"
                        android:layout_gravity="end"
                        android:textSize="17sp"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:textColor="@color/textLight_color"
                        android:padding="15dp"
                        android:visibility="gone"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/toolbar_title" />
                    <ImageButton
                        android:id="@+id/iconMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:padding="15dp"
                        android:src="@drawable/icon_post_more_vector"
                        android:tint="@color/gnt_white"
                        android:layout_marginEnd="5dp"
                        android:background="@null"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:layout_marginTop="0dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/gnt_white"
                        android:layout_alignParentBottom="true"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_marginEnd="9dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="0dp"
                        card_view:cardCornerRadius="20dp">
                        <ImageView
                            android:id="@+id/offerAvatar"
                            android:scaleType="centerCrop"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/imageplacholder_circle" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="@xml/rounded_corner"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:translationY="0dp"
            android:layout_marginTop="0dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:textSize="24sp"
                android:textColor="@color/accent"/>
            <TextView
                android:id="@+id/tv_subname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="#DFE2E7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <TextView
                    android:id="@+id/tv_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/Lbl_Page_title"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/accent"
                            android:text="@string/Lbl_Discount"/>
                        <TextView
                            android:id="@+id/tv_discount_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/accent"
                            android:text="@string/Lbl_End_Date"/>
                        <TextView
                            android:id="@+id/tv_enddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/post_devider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/accent"
                    android:text="@string/Lbl_OfferDescription"/>
                <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center|start"
                    android:layout_marginTop="10dp"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:hyphenationFrequency="none"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>