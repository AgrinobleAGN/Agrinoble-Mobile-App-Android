<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="@android:color/black">

  <ImageView
    android:id="@+id/back"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_margin="15dp"
    android:src="@drawable/ic_action_left_arrow2" /> 

	<FrameLayout
		android:id="@+id/root"
		android:clickable="true"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:keepScreenOn="true">
		<com.google.android.exoplayer2.ui.PlayerView
			android:id="@+id/player_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:resize_mode="fill"
			app:use_controller="true"
			app:rewind_increment="3000"
			app:fastforward_increment="3000"
			app:auto_show="true"
			app:surface_type="surface_view"
			app:controller_layout_id="@layout/exo_playback_control_view"
			app:played_color="@android:color/transparent"
			app:scrubber_color="@android:color/transparent"
			app:show_timeout="1000"
			app:shutter_background_color="@android:color/transparent"
			app:unplayed_color="@android:color/transparent"/>
	</FrameLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="bottom"
		android:paddingBottom="5dp">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="15dp"
			android:layout_weight="1"
			android:orientation="vertical"
			android:paddingBottom="10dp">

			<LinearLayout
				android:id="@+id/userLayout"
                android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical">

				<ImageView
					android:id="@+id/imageAvatar"
					android:layout_width="45dp"
					android:layout_height="45dp"
					android:src="@drawable/no_profile_image_circle"
					android:padding="2dp" />

				<TextView
                    android:id="@+id/username"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="5dp"
					android:ellipsize="end"
					android:maxLines="1"
					android:textStyle="bold"
					android:shadowColor="#000000"
					android:shadowDx="0"
					android:shadowDy="0"
					android:shadowRadius="0.5"
					android:textColor="#f1f1f3"
					android:textSize="15dp"
                    android:drawablePadding="4dp" />
				 
			</LinearLayout>
			 
			<WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
				android:id="@+id/tv_descreption"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="3dp"
				android:layout_marginBottom="10dp"
				android:maxWidth="250dp"
				android:maxLength="200"
				android:textColor="@color/gnt_white"
				android:textSize="13dp" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="60dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="5dp"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:paddingTop="20dp"
			android:paddingBottom="10dp">

            <LinearLayout
              android:id="@+id/GiftLayout"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:orientation="vertical"
              android:layout_marginTop="5dp">
	      
              <ImageView
                android:id="@+id/img_sendGift"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/circlegradient"
                android:padding="10dp"
                android:tint="@color/gnt_white"
                android:src="@drawable/icon_gift_vector" />  
	      
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#f1f1f3"
                android:text="@string/Lbl_SentGift"
                android:textSize="12dp" />

            </LinearLayout>
			 
			<LinearLayout
                android:id="@+id/likeLayout"
				android:layout_width="wrap_content"
				android:layout_height="70dp"
				android:orientation="vertical"
				android:layout_marginTop="5dp">

				<ImageView
					android:id="@+id/img_like"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_gravity="center"
                    android:background="@drawable/circlegradient"
                    android:padding="9dp"
                    android:tint="@color/gnt_white"
					android:src="@drawable/ic_like_1" />

				<TextView
					android:id="@+id/tv_likeCount"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:textColor="#f1f1f3"
					android:text="0"
					android:textSize="12dp" />
			</LinearLayout>

			<LinearLayout
                android:id="@+id/commentLayout"
				android:layout_width="wrap_content"
				android:layout_height="70dp"
				android:orientation="vertical"
				android:layout_marginTop="5dp">

				<ImageView
					android:id="@+id/img_comment"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_gravity="center"
                    android:background="@drawable/circlegradient"
                    android:padding="9dp"
					android:tint="@color/gnt_white"
					android:src="@drawable/icon_post_comment_vector" />

				<TextView
					android:id="@+id/tv_comment_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:textColor="#f1f1f3"
					android:text="0"
					android:textSize="12dp" />
			</LinearLayout>

			<LinearLayout
                android:id="@+id/shareLayout"
				android:layout_width="wrap_content"
				android:layout_height="70dp"
				android:orientation="vertical"
				android:layout_marginTop="5dp">

				<ImageView
					android:id="@+id/img_share"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_gravity="center"
                    android:background="@drawable/circlegradient"
                    android:padding="9dp"
					android:tint="@color/gnt_white"
					android:src="@drawable/icon_post_share_small_vector" />

				<TextView
					android:id="@+id/tv_share_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:textColor="#f1f1f3"
					android:text="0"
					android:textSize="12dp" />
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>
</RelativeLayout>