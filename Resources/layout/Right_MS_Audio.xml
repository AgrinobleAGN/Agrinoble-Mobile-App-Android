<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:id="@+id/main"
                android:paddingEnd="3dp">
    <LinearLayout
        android:id="@+id/bubble_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_rounded_right_layout"
        android:orientation="vertical" 
        android:gravity="end" 
        android:layout_gravity="end"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="3dp">
        <include
	        android:id="@+id/ForwardLayout"
	        layout="@layout/ForwardMessageViewLayout" 
	        android:visibility="gone" /> 
        
        <include
	        android:id="@+id/replied_message_view"
	        layout="@layout/RepliedMessageViewLayout" 
	        android:visibility="gone" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="42dp">
            <at.markushi.ui.CircleButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:cb_color="@color/textIcon"
                app:cb_pressedRingWidth="13dip"
                android:src="@drawable/ic_play_arrow"
                android:id="@+id/playButton"
                android:tag="Play"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:layout_gravity="center" />
            <ProgressBar
              android:id="@+id/loadingProgressview"
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:max="100"
              android:progress="0"
              android:visibility="visible"
              android:layout_gravity="center"
              android:layout_marginEnd="1dp"
              android:layout_marginStart="1dp"
              android:layout_weight="2"
              android:indeterminate="true"
              android:secondaryProgress="100"
              android:secondaryProgressTint="@color/textIcon"
              android:progressTint="@color/textIcon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Duration"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:textColor="@color/textIcon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:layout_weight="1"
                android:textColor="@color/textIcon"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_gravity="center" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:layout_gravity="center">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/starIcon"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    app:lottie_loop="false"
                    android:layout_centerInParent="true"
                    app:lottie_fileName="FavAnim.json" />
                <ImageView
                    android:id="@+id/fav"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_fav_post_vector"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:padding="2dp" />
            </RelativeLayout>
            <TextView
                android:layout_height="match_parent"
                android:id="@+id/seen"
                android:textColor="@color/textIcon"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Ic"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="15dp" />
        </LinearLayout>
    </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:id="@+id/countLikeSection"
    android:layout_alignStart="@+id/bubble_layout"
    android:layout_below="@+id/bubble_layout"
    android:layout_width="wrap_content" 
    android:visibility="gone"
    android:translationY="-5dp"
    android:clickable="true" 
    android:gravity="center"
    android:backgroundTint="?attr/colorFill"
    android:background="@drawable/shape_radius_btn"
    android:layout_height="20dp">
    <ImageView
      android:id="@+id/ImagecountLike"
      android:layout_width="16dp"
      android:layout_height="16dp"
      android:src="@drawable/emoji_love"
      android:layout_margin="5dp"
      android:scaleType="centerCrop" />
  </LinearLayout>
 </RelativeLayout>