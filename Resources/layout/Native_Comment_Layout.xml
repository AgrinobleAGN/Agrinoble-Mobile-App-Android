<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content"
    android:background="@drawable/rounded_corner_from_top_shape">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_gravity="start"
            android:tint="?attr/colorReact"
            android:layout_marginStart="11dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_action_left_arrow2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/like_box"
            android:maxLines="1"
            android:textSize="13dp"
            android:layout_toEndOf="@+id/back"
            android:minLines="1"
            android:layout_margin="16dp"
            android:layout_marginStart="11dp"
            android:gravity="center"
            android:layout_weight="0" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:id="@+id/divider"
        android:background="?attr/colorDivider"
        android:layout_weight="0" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_alignParentTop="false">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:id="@+id/divider2"
        android:background="?attr/colorDivider"
        android:layout_weight="0" />
    <FrameLayout
        android:id="@+id/TopFragmentHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorReact"
        android:layout_gravity="center"
        android:layout_centerVertical="false"
        android:layout_alignParentBottom="true"
        android:translationY="400dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:layout_gravity="bottom|center"
        android:id="@+id/commentLayout"
        android:background="?attr/colorFill"
        android:orientation="horizontal">
	    <ImageView
		    android:id="@+id/emojiicon"
		    android:layout_width="25dp"
		    android:layout_height="match_parent"
		    android:src="@drawable/ic_action_sentiment_satisfied_alt"
		    android:scaleType="fitCenter"
		    android:layout_gravity="center"
		    android:focusable="true"
		    android:focusableInTouchMode="true"
		    android:gravity="center"
		    android:layout_marginStart="5dp" />
	    <com.aghajari.emojiview.view.AXEmojiEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/commenttext"
            android:background="@null"
            android:textSize="16sp"
            android:maxLines="4"
            android:imeOptions="actionSend"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:inputType="textCapSentences|textMultiLine|textShortMessage"
            android:hint="@string/Lbl_AddCommentHere"
            android:textColorHint="?attr/colorReact" />
        <at.markushi.ui.CircleButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/voiceButton"
            app:cb_color="?attr/colorFill"
            app:cb_pressedRingWidth="5dip"
            android:padding="1dp"
            android:layout_gravity="center"
            android:gravity="center" 
            android:tint="?attr/colorReact"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/microphone"
            android:layout_weight="0" />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/image"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_action_AddPost"
            android:padding="6dp"
            android:layout_weight="0" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:padding="1dp"
            android:id="@+id/send"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_send"
            android:layout_weight="0" />
    </LinearLayout>
</LinearLayout>