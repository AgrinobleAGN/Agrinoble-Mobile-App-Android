<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/LayoutField"
              android:padding="5dp"
              android:background="?attr/colorBubble"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
  <EditText
    android:id="@+id/FieldEditText1"
    style="@style/EditTextNormalStyle"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:textSize="15sp"
    android:gravity="start"
    android:layout_marginTop="5dp"
    android:background="@drawable/round_gray_border"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="3dp" />
  <EditText
    android:id="@+id/FieldEditText2"
    style="@style/EditTextNormalStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:gravity="start"
    android:minHeight="90dp" 
    android:layout_marginTop="5dp" 
    android:background="@drawable/round_gray_border"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="3dp" />  
  <TextView
    android:id="@+id/DescriptionOfFieldTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:textSize="14sp" 
    android:layout_marginEnd="5dp"
    android:layout_marginStart="10dp" />
</LinearLayout>