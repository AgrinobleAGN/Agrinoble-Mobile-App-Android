<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorFill"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="260dp"
        android:layout_height="230dp"
        android:src="@drawable/create_groups"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/space1"/>
    <Space
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/space1"
        android:text="@string/Lbl_Title_page2"
        android:id="@+id/titile"
        
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <TextView
        android:layout_below="@+id/titile"
        android:fontFamily="@font/wowonder"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/Lbl_Description_page2"
        android:id="@+id/subtitile"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginEnd="45dp"
        android:gravity="center"
        android:layout_marginStart="45dp" />

</RelativeLayout>