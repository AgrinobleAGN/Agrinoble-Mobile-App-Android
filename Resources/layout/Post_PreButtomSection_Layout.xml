<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="fill_horizontal"
    android:orientation="horizontal"
    android:layout_height="40dp"
    android:layout_width="match_parent" 
    	android:paddingStart="20dp"
    android:paddingEnd="20dp"> 

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">
	    <LinearLayout
		    android:orientation="horizontal"
		    android:id="@+id/countLikeSection"
		    android:layout_width="0dp"
            android:layout_weight="1"
		    android:clickable="true"
		    android:backgroundTint="@android:color/transparent"
		    android:background="@drawable/shape_radius_btn"
		    android:layout_height="wrap_content"
            android:gravity="center_vertical">
		    <ImageView
			    android:id="@+id/ImagecountLike"
			    android:layout_width="20dp"
			    android:layout_height="20dp"
			    android:alpha=".90"
			    android:scaleType="centerCrop" 
                android:src="@drawable/icon_post_like_vector"/>
		    <TextView
			    android:id="@+id/Likecount"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
			    android:gravity="center_vertical"
			    android:textColor="?attr/colorReact"
			    android:textSize="12sp"
			    android:maxLines="1"
			    android:lines="1" />
	    </LinearLayout>  
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewcount"
            android:textSize="12sp"
            android:textColor="?attr/colorReact"
            android:maxLines="1"
            android:lines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/Commentcount"
            android:textSize="12sp"
            android:tag="false"
            android:text="0"
            android:textColor="?attr/colorReact"
            android:maxLines="1"
            android:lines="1"/>  
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sharecount"
            android:textSize="12sp"
            android:tag="false"
            android:text="0"
            android:textColor="?attr/colorReact"
            android:maxLines="1"
            android:lines="1"
            android:layout_marginStart="10dp"/> 
    </LinearLayout>
    
  
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:background="?attr/colorBubble"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>