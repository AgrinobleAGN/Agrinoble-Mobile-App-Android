<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:id="@+id/main"
    android:orientation="vertical">
    <it.sephiroth.android.library.imagezoom.ImageViewTouch
        android:id="@+id/imageview"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:adjustViewBounds="true"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent" />
     <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@xml/framealfacolor"
        android:id="@+id/infoImageLiner"
        android:foregroundGravity="bottom"
        android:gravity="bottom"
        android:layout_gravity="bottom" >
        <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:gravity="bottom"
            android:foregroundGravity="bottom"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:fillViewport="true">
            <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textLight_color"
                android:textSize="15sp"
                android:layout_weight="1.0" />
        </ScrollView>
        <LinearLayout
            android:id="@+id/mainLiner"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:foregroundGravity="fill_horizontal|left"
            android:gravity="center|left">
            <LinearLayout
                android:id="@+id/linerlikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/image_like1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_action_like_2"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start|center"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="6dp"
                    android:foregroundGravity="center"
                    android:gravity="center"  />
                <TextView
                    android:id="@+id/LikeText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textSize="14sp"
                    android:textColor="@color/textLight_color"
                    android:text="0"
                    android:layout_weight="15"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="1dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="@string/Lbl_Reactions"
                    android:textSize="14sp"
                    android:textColor="@color/colorIcon"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linerwowonderCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:foregroundGravity="center">
                <ImageView
                    android:id="@+id/image_wowonder"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_action_wowonder"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start|center"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="6dp"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:tint="#fff89823" />
                <TextView
                    android:id="@+id/WoWonderTextCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorIcon"
                    android:text="0"
                    android:layout_weight="15"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center_vertical|left|center"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="1dp" />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/Commentcount"
                android:textSize="14sp"
                android:tag="false"
                android:text="0"
                android:textColor="@color/colorIcon"
                android:maxLines="1"
                android:lines="1"/>  
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Sharecount"
                android:textSize="14sp"
                android:tag="false"
                android:text="0"
                android:textColor="@color/colorIcon"
                android:maxLines="1"
                android:lines="1"
                android:layout_marginStart="10dp"/> 
        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_centerHorizontal="true"
            android:background="?attr/colorDivider" />
        <include
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="1dp"
          layout="@layout/post_buttomsection_layout"/> 
    </LinearLayout>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
                app:theme="@style/ToolbarTheme"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        android:layout_marginTop="5dp"
        app:popupTheme="@style/PopupMenuStyle"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:background="@null"></androidx.appcompat.widget.Toolbar>
</RelativeLayout>