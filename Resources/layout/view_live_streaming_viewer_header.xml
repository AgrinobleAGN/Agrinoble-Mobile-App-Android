<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@android:color/transparent">

    <include layout="@layout/view_live_streaming_viewer_header_streamer_info" />

    <TextView
        android:id="@+id/livestreamingHeader_viewers"
        android:textColor="@color/gnt_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#90000000"
        android:background="@drawable/shape_radius_btn"
        android:drawablePadding="4dp"
        android:paddingStart="6dp"
        android:paddingTop="4dp"
        android:paddingEnd="6dp"
        android:paddingBottom="4dp"     
		android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageCenterView"
        app:layout_constraintEnd_toStartOf="@+id/livestreamingHeader_close"
        app:layout_constraintTop_toTopOf="@+id/imageCenterView" />
     
    <ImageView
        android:id="@+id/livestreamingHeader_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageCenterView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageCenterView"
        android:tint="@color/gnt_white" 
        android:src="@drawable/icon_close_vector" />
     
</androidx.constraintlayout.widget.ConstraintLayout>
