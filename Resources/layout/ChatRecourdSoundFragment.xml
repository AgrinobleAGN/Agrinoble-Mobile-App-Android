<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_horizontal"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:showDividers="end"
    android:backgroundTint="?attr/colorFill"
    app:backgroundTint="?attr/colorFill"
    android:background="?attr/colorFill" >
    <at.markushi.ui.CircleButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cb_color="@color/textIcon"
        app:cb_pressedRingWidth="13dip"
        android:src="@drawable/ic_play_dark_arrow"
        android:id="@+id/playButton"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:layout_gravity="start" />
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/voiceseekbar"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:progressTint="#ff000000"
        android:secondaryProgressTint="#00000000"
        android:indeterminateTint="#ffffa500"
        android:progressBackgroundTint="#ff000000"
        android:thumbTint="?attr/colorPrimary" />
    <at.markushi.ui.CircleButton
        android:id="@+id/closeRecourdButton"
        android:layout_width="64dip"
        android:layout_height="64dip"
        app:cb_color="#efefef"
        app:cb_pressedRingWidth="13dip"
        app:layout_columnWeight="1"
        app:layout_rowWeight="3"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_gravity="center_vertical" />
    <at.markushi.ui.CircleButton
        android:id="@+id/sendRecourdButton"
        android:layout_width="64dip"
        android:layout_height="64dip"
        app:cb_color="@color/accent"
        app:cb_pressedRingWidth="10dip"
        app:layout_columnWeight="1"
        app:layout_rowWeight="3"
        android:padding="10dp"
        android:src="@drawable/sendletter"
        android:layout_gravity="center_vertical" />
</LinearLayout>