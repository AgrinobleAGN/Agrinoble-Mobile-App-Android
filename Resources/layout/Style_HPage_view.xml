<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/llPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/imagecontainer"
            android:layout_width="48dp"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/Image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/no_profile_image"
                android:focusableInTouchMode="false" />
            <RelativeLayout
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">
                <Refractored.Controls.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:civ_border_color="@color/gnt_white"
                    app:civ_border_width="2dp"
                    android:src="@color/colorNotiBg"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_small_flag"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/card_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llButtonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llPage"
        android:layout_marginTop="20dp"
        android:layout_marginStart="58dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:id="@+id/cont"
            android:textSize="13sp"
            android:background="@drawable/follow_button_profile_friends"
            android:tag="false"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:text="@string/Btn_Like"
            android:textColor="@color/accent" />
        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/BtnView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:textSize="13sp"
            android:background="@drawable/follow_button_profile_friends_pressed"
            android:tag="false"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:text="@string/Lbl_ViewPage"
            android:textColor="@color/gnt_white"/>
    </LinearLayout>

</RelativeLayout>