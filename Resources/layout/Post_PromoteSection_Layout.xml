<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/promoteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">
  <ImageView
    android:id="@+id/promoteIcon"
    android:scaleType="centerCrop"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:tint="#ffa412"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="11dp"
    android:layout_marginTop="5dp"
    android:src="@drawable/ic_action_promote" />
  <TextView
    android:hyphenationFrequency="none"
    android:id="@+id/promotText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="25dp"
    android:layout_toEndOf="@+id/promoteIcon"
    android:text="@string/Lbl_Promoted"
    android:textColor="#ffa412"
    android:textSize="12sp"
    android:maxLines="1"
    android:lineSpacingExtra="3dp"
    android:paddingTop="3dp"
    android:paddingBottom="2dp" />
  <ImageView
    android:id="@+id/pinnedIcon"
    android:scaleType="centerCrop"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:tint="#ffa412"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="13dp"
    android:layout_marginTop="0dp"
    android:src="@drawable/ic_action_pinned" />
</RelativeLayout>