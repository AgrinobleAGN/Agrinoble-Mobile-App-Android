<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="4dp"
    android:layout_width="250dp"
    android:id="@+id/mainLayout"
    android:background="@drawable/ShadowLinerLayout"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:background="@drawable/price_gopro_item_style"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/iv1"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:tint="#4c7737"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gopro_medal"
            android:layout_width="42dp" 
            android:layout_height="42dp" />
        <TextView
            android:id="@+id/priceTextView"
            android:layout_below="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4c7737"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="3dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/PerText"
            android:layout_below="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center" />
    </RelativeLayout>
    <TextView
        android:id="@+id/PlanText"
        android:layout_below="@+id/PerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4c7737"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="3dp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_gravity="center" />
    <LinearLayout
        android:id="@+id/OptionLinerLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
    <Button
        android:text="@string/Lbl_upgrade_now"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/UpgradeButton"
        android:background="@drawable/follow_button_profile_friends_pressed"
        android:backgroundTint="#4c7737"
        android:textColor="@color/textLight_color"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp" />
</LinearLayout>