<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginEnd="9dp"
    android:layout_marginStart="9dp"
    android:layout_marginTop="6dp"
    android:paddingBottom="0dp"
    android:layout_marginBottom="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/colorFill"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp">
    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical"
        android:focusable="false"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/fundImage"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="85dp"
            android:minHeight="60dp"
            android:focusable="false"
            android:clickable="false" 
            android:src="@drawable/ImagePlacholder"
            android:focusableInTouchMode="false" />
        <TextView
            android:id="@+id/fundTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:maxLines="2"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:textStyle="bold"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal"
            android:gravity="start|center">
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/no_profile_image_circle"/>
            <TextView
                android:id="@+id/fundUsername"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginStart="5dp"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textStyle="normal"
                android:layout_marginEnd="5dp"
                android:textSize="10sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/fundDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:lines="1"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:textColor="@color/text_color_in_between"
            android:textSize="12sp"
            android:layout_marginTop="20dp" />
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:progressDrawable="@drawable/gradient_progress"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="200dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:progress="30" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="25dp">
            <TextView
                android:id="@+id/raised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:layout_alignParentStart="true"
                android:background="@drawable/round_button_pressed"
                android:backgroundTint="#D8FFCE"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:maxLines="1"
                android:textColor="#066E21"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/TottalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:maxLines="1"
                android:textColor="@color/accent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>