<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
	android:background="?attr/colorBubble"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	 <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
                app:theme="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="?attr/colorFill">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Save"
                android:layout_gravity="end"
                android:textSize="15sp"
                android:textStyle="bold" 
                android:padding="15dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/toolbar_title" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
   <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorBubble"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:id="@+id/lyt_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">
                <!--Title Section -->
                <LinearLayout
                    android:id="@+id/LayoutTitle"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconTitle"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                      android:id="@+id/TitleEditText"
                      style="@style/EditTextNormalStyle"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:hint="@string/Lbl_JobTitle" 
                      android:textSize="15sp"
                      android:gravity="start"
                      android:background="@drawable/round_gray_border"
                      android:layout_alignParentEnd="true"
                      android:layout_marginStart="3dp" />
                </LinearLayout>  
                <!--Location Section -->
                <LinearLayout
                    android:id="@+id/LayoutLocation"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconLocation"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="top|center"
                        android:layout_gravity="start"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/LocationEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/round_gray_border"
                        android:hint="@string/Lbl_Location"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>  
				 <!--Salary Range Section -->
                <LinearLayout
                    android:id="@+id/LayoutSalary"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconSalary"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/MinimumEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_weight="50"
                        android:ems="10"
                        android:layout_height="45dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:hint="@string/Lbl_minimum"
                        android:textSize="15sp"
                        android:maxLines="1"
						 android:gravity="start"
                        android:inputType="number"
                        android:layout_marginStart="3dp" />
                    <EditText
                        android:id="@+id/MaximumEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_weight="50"
                        android:ems="10"
                        android:layout_height="45dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:hint="@string/Lbl_maximum"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:gravity="start"
                        android:inputType="number"
                        android:layout_marginStart="3dp" />
                </LinearLayout> 
                <!--SalaryDate Section -->
                <LinearLayout
                  android:id="@+id/LayoutSalaryDate"
                  android:paddingTop="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginEnd="5dp"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
                  <TextView
                    android:id="@+id/IconSalaryDate"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="#"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
                  <EditText
                    android:id="@+id/SalaryDateEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/Lbl_Date"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:background="@drawable/round_gray_border"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp" />
                </LinearLayout> 
                <!--JobType Section -->
                <LinearLayout
                    android:id="@+id/LayoutJobType"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconJobType"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/JobTypeEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="@string/Lbl_JobType"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout> 
                <!--Category Section -->
                <LinearLayout
                    android:id="@+id/LayoutCategory"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconCategory"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/CategoryEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="@string/Lbl_Category"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
                <!--Description Section -->
                <LinearLayout
                  android:id="@+id/LayoutDescription"
                  android:paddingTop="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginEnd="5dp"
                  android:layout_height="wrap_content">
                  <TextView
                    android:id="@+id/IconDescription"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="#"
                    android:gravity="top|center"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
                  <EditText
                    android:id="@+id/DescriptionEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/round_gray_border"
                    android:hint="@string/Lbl_Description"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp" />
                </LinearLayout>   
                <View 
				    android:layout_height="?android:attr/actionBarSize"
                    android:layout_width="match_parent" /> 
            </LinearLayout>
        </androidx.core.widget.NestedScrollView> 
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>