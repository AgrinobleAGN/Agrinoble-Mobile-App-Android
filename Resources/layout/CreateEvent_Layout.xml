<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:theme="@style/ToolbarTheme"
        app:title="@string/Lbl_Create_Events"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:background="?attr/colorFill">
    </androidx.appcompat.widget.Toolbar>
  </com.google.android.material.appbar.AppBarLayout>

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingStart="15dp"
          android:paddingEnd="15dp"
          android:paddingTop="20dp"
          android:paddingBottom="20dp"
          android:orientation="vertical">
        <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1/6"
            android:textSize="15sp"
                    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
          <View
              android:id="@+id/view_step1"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="3dp"
              android:background="#C6CBC7"/>
          <Space
              android:layout_width="10dp"
              android:layout_height="wrap_content"/>
          <View
              android:id="@+id/view_step2"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="3dp"
              android:background="#C6CBC7"/>
          <Space
              android:layout_width="10dp"
              android:layout_height="wrap_content"/>
          <View
              android:id="@+id/view_step3"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="3dp"
              android:background="#C6CBC7"/>
          <Space
              android:layout_width="10dp"
              android:layout_height="wrap_content"/>
          <View
              android:id="@+id/view_step4"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="3dp"
              android:background="#C6CBC7"/>
          <Space
              android:layout_width="10dp"
              android:layout_height="wrap_content"/>
          <View
              android:id="@+id/view_step5"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="3dp"
              android:background="#C6CBC7"/>
          <Space
              android:layout_width="10dp"
              android:layout_height="wrap_content"/>
          <View
              android:id="@+id/view_step6"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="3dp"
              android:background="#C6CBC7"/>
        </LinearLayout>
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:background="?attr/colorDivider"
          android:layout_height="5dp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:padding="15dp"
          android:gravity="start">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:id="@+id/ll_step1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_Event_Name"
                            android:textSize="15sp"
                            android:textColor="@color/accent"/>
                        <EditText
                            android:id="@+id/eventname"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/round_gray_border"
                            android:layout_marginTop="20dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textSize="14sp"
                            android:hint="@string/Lbl_EnterEventName"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_step2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_Start_Date"
                            android:textSize="15sp"
                            android:textColor="@color/accent"/>
                        <EditText
                            android:id="@+id/StartDateTextview"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/round_gray_border"
                            android:layout_marginTop="20dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textSize="14sp"
                            android:hint="@string/Lbl_EnterStartDate"
                            android:focusable="false"
                            android:visibility="visible"
                            android:inputType="none"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/Lbl_StartTime"
                            android:textSize="15sp"
                            android:textColor="@color/accent"/>
                        <EditText
                            android:id="@+id/StartTimeTextview"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/round_gray_border"
                            android:paddingStart="15dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textSize="14sp"
                            android:hint="@string/Lbl_EnterStartTime"
                            android:visibility="visible"
                            android:inputType="none"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_step3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_End_Date"
                            android:textSize="15sp"
                            android:textColor="@color/accent"/>
                        <EditText
                            android:id="@+id/EndDateTextview"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/round_gray_border"
                            android:layout_marginTop="20dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textSize="14sp"
                            android:hint="@string/Lbl_EnterEndDate"
                            android:inputType="none"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/Lbl_EndTime"
                            android:textSize="15sp"
                            android:textColor="@color/accent"/>
                        <EditText
                            android:id="@+id/EndTimeTextview"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/round_gray_border"
                            android:paddingStart="15dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textSize="14sp"
                            android:hint="@string/Lbl_EnterEndTime"
                            android:inputType="none"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_step4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/TxtEventPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_EventPhoto"
                            android:textSize="15sp"
                            android:textColor="@color/accent"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/TxtEventPhoto"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/round_gray_border"/>
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/fundingCover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/TxtEventPhoto"
                            android:layout_marginTop="20dp"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="4dp"/>
                        <ImageView
                            android:id="@+id/btn_selectimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_plus_large"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_below="@id/btn_selectimage"
                            android:layout_centerHorizontal="true"
                            android:textSize="14sp"
                            android:textColor="#8c8c8c"
                            android:text="Upload Photo"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/ll_step5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_Location"
                            android:textSize="15sp"
                            android:textColor="@color/accent"/>
                        <EditText
                            android:id="@+id/LocationTextview"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/round_gray_border"
                            android:layout_marginTop="20dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textSize="14sp"
                            android:text="@string/Lbl_Select_Location"
                            android:textColor="#8C8C8C"
                            android:inputType="none"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_step6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Lbl_EventDescription"
                            android:textSize="15sp"
                            android:textColor="@color/accent"/>
                        <EditText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:background="@drawable/round_gray_border"
                            android:layout_marginTop="20dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:hint="@string/Lbl_EnterDescriptionHere"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:lines="7"/>
                    </LinearLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/follow_button_profile_friends_pressed"
            android:textSize="14sp"
            android:textColor="@color/gnt_white"
            android:text="@string/lb_onboarding_accessibility_next"
            android:textAppearance="?android:attr/textAppearanceSmall"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imageRecyler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
      </LinearLayout>
      <com.google.android.gms.ads.doubleclick.PublisherAdView
          android:id="@+id/multiple_ad_sizes_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          app:adSize="MEDIUM_RECTANGLE,120x20,250x250,320x100,SMART_BANNER"
          app:adUnitId="@string/banner_multiple_ad_sizes_id" />
    </LinearLayout>

  </androidx.core.widget.NestedScrollView>

</LinearLayout>
