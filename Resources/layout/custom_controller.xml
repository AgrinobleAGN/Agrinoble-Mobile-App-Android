<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="4dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/exo_rew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ExoMediaButton.Rewind"
            android:src="@drawable/ic_exo_rewind"
            android:layout_marginEnd="30dp"/>
        <ImageButton
            android:id="@+id/exo_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ExoMediaButton.Play"
            android:src="@drawable/ic_exo_play"/>
        <ImageButton
            android:id="@+id/exo_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ExoMediaButton.Pause"
            android:src="@drawable/ic_exo_pause"/>
        <ImageButton
            android:id="@id/exo_ffwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            style="@style/ExoMediaButton.FastForward"
            android:src="@drawable/ic_exo_forward"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_exo_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="bottom">
        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/textLight_color"
            android:visibility="visible"/>
        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:ad_marker_color="#FF2D55"
            android:layout_gravity="center_vertical"
            app:played_color="#FF2D55"
            app:buffered_color="#ffe0e0e0"
            app:unplayed_color="#2ec7c7c7"
            android:outlineSpotShadowColor="#FF2D55"/>
        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/textLight_color"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/exo_volume_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="3dp"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_volume_up_grey_24dp"/>
        <FrameLayout
            android:id="@+id/exo_fullscreen_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="15dp">
            <ImageView
                android:id="@+id/exo_fullscreen_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_ic_fullscreen_expand"
                android:layout_marginEnd="5dp"
                android:visibility="visible"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
