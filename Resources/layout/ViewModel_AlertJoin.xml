<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="true"
    android:id="@+id/mainview"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/shape_gradient_linear"
    android:layout_width="match_parent"
    android:layout_height="135dp">
    <ImageView
        android:id="@+id/IconImageview"
        android:layout_width="27dip"
        android:layout_height="27dip"
        android:layout_gravity="end"
        android:background="@drawable/shape_circle_stroke"
        android:src="@drawable/sharegroup"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:tint="#444" />
    <TextView
        android:id="@+id/HeadText"
        android:layout_toEndOf="@+id/IconImageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        android:focusable="false"
        android:textStyle="bold"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/textLight_color"
        android:maxLines="1"
        android:clickable="false"
        android:text="@string/Lbl_Groups"
        android:textAlignment="textStart" />
    <ImageView
        android:id="@+id/Imageview"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_gravity="end"
        android:src="@drawable/Image2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="29dp" />
    <TextView
        android:id="@+id/subText"
        android:layout_toStartOf="@+id/Imageview"
        android:layout_below="@+id/HeadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/textLight_color"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="9dp"
        android:focusable="false"
        android:lines="2"
        android:clickable="false"
        android:text="@string/Lbl_FindMoreAler_TextGroups"
        android:textAlignment="textStart" />
    <Button
        android:id="@+id/buttonview"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:textAllCaps="false"
        android:layout_below="@+id/subText"
        android:layout_height="37dp"
        android:textSize="12dp"
        android:text="@string/Lbl_FindYourGroups"
        android:backgroundTint="@color/textLight_color" />
</RelativeLayout>