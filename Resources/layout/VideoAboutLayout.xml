<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/NestedScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:adSize="SMART_BANNER"
                app:adUnitId="@string/banner_ad_unit_id"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:minWidth="100px"
                android:id="@+id/TitleLayout"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="13dp">
                <TextView
                    android:id="@+id/video_Titile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="@string/Lbl_Loading"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/video_ShowDiscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="@string/Lbl_More"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="17dp"
                    android:layout_weight="0"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:minWidth="100px"
                android:id="@+id/ButtonLayout"
                android:minHeight="50px"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/QualityButton"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/Qualityicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:textColor="#a7a7a7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Ic" />
                    <TextView
                        android:id="@+id/QualityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/ViewsButton">
                    <TextView
                        android:id="@+id/Viewsicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:textColor="#a7a7a7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Ic" />
                    <TextView
                        android:id="@+id/ViewsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="0"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/ShareButton">
                    <TextView
                        android:id="@+id/Shareicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:textColor="#a7a7a7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Ic" />
                    <TextView
                        android:id="@+id/ShareText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/Lbl_Share"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/moreButton">
                    <TextView
                        android:id="@+id/Moreicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:textColor="#a7a7a7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Ic" />
                    <TextView
                        android:id="@+id/MoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/Lbl_More"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/devidervideo"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="?attr/colorFill" />
            <LinearLayout
                android:id="@+id/videoDescriptionLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="?attr/colorFill"
                android:visibility="visible"
                android:tag="Open">
                <TextView
                    android:id="@+id/videoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:includeFontPadding="false"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="@string/Lbl_Published_on"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp" />
                <com.luseen.autolinklibrary.AutoLinkTextView
                    android:id="@+id/videoDescriptionTextview"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp" />
                <LinearLayout
                    android:id="@+id/videoCategoryLayout"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/videoCategoryDefaultText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:text="@string/Lbl_Category"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/videoCategorytextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/videoStarsLayout"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/videoStarsDefaultText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:text="@string/Lbl_Stars"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/videoStarstextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/videoTagLayout"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/videoTagDefaultText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:text="@string/Lbl_Tag"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/videoTagtextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="?attr/colorDivider" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>