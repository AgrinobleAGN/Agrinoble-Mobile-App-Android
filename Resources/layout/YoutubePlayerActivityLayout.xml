<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_content"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:animationCache="true"
        android:duplicateParentState="true"
        android:filterTouchesWhenObscured="true" 
		android:background="@android:color/transparent">
		<com.google.android.material.appbar.CollapsingToolbarLayout
			android:id="@+id/collapsing_toolbar"
			android:layout_width="match_parent"
			android:layout_height="match_parent" 
			android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            app:scrimAnimationDuration="100"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:collapsedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Collapsed"
            app:expandedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Expanded">
			<LinearLayout
				android:orientation="vertical"
				android:layout_marginBottom="0dp"
				android:paddingBottom="0dp"
				android:paddingTop="5dp"
				android:layout_marginTop="15dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<RelativeLayout
						android:id="@+id/postExtras"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:visibility="gone"
						android:gravity="start">
						<ImageView
							android:id="@+id/promoteIcon"
							android:scaleType="centerCrop"
							android:layout_width="16dp"
							android:layout_height="16dp"
							android:tint="#ffa412"
							android:layout_alignParentStart="true"
							android:layout_marginBottom="5dp"
							android:layout_marginStart="11dp"
							android:layout_marginTop="5dp"
							android:src="@drawable/ic_action_promote" />
						<TextView
							android:hyphenationFrequency="none"
							android:id="@+id/promotText"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="12dp"
							android:layout_marginEnd="25dp"
							android:layout_toEndOf="@+id/promoteIcon"
							android:text="@string/Lbl_Promoted"
							android:textColor="#ffa412"
							android:textSize="12sp"
							android:maxLines="1"
							android:lineSpacingExtra="3dp"
							android:paddingTop="3dp"
							android:paddingBottom="2dp" />
						<ImageView
							android:id="@+id/pinnedIcon"
							android:scaleType="centerCrop"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:tint="#ffa412"
							android:layout_alignParentEnd="true"
							android:layout_marginBottom="5dp"
							android:layout_marginEnd="13dp"
							android:layout_marginTop="0dp"
							android:src="@drawable/ic_action_pinned" />
					</RelativeLayout>
					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center">
						<refractored.controls.CircleImageView
							android:id="@+id/userAvatar"
							android:scaleType="centerCrop"
							android:layout_width="43dp"
							android:layout_height="43dp"
							android:layout_marginBottom="5dp"
							android:layout_marginStart="10dp"
							android:layout_marginTop="5dp"
							app:civ_border_width="1dp"
							app:civ_border_color="@color/textLight_color"
							android:src="@drawable/imageplacholder_circle" />
						<WoWonder.Helpers.Fonts.TextViewWithImages
							android:hyphenationFrequency="none"
							android:id="@+id/username"
							android:inputType="textMultiLine"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:maxWidth="260dp"
							android:layout_marginStart="12dp"
							android:layout_marginEnd="27dp"
							android:layout_toEndOf="@+id/userAvatar"
							android:textSize="13sp"
							android:maxLines="2"
							android:layout_marginTop="2dp"
							android:textColor="@color/textLight_color"
							android:lineSpacingExtra="3dp"
							android:paddingTop="7dp"
							android:paddingBottom="2dp" />
						<androidx.appcompat.widget.AppCompatTextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/time_text"
							android:textSize="11sp"
							android:layout_marginTop="3dp"
							android:layout_marginStart="12dp"
							android:layout_marginEnd="5dp"
							android:maxLines="1"
							android:lines="1"
							android:tag="false"
							android:paddingTop="0dp"
							android:paddingEnd="1dp"
							android:textAlignment="center"
							android:textAllCaps="false"
							android:textColor="#a5a5a5"
							android:layout_toEndOf="@+id/userAvatar"
							android:layout_below="@+id/username" />
						<androidx.appcompat.widget.AppCompatTextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/privacyPost"
							android:textSize="11sp"
							android:layout_marginTop="5dp"
							android:layout_marginEnd="7dp"
							android:maxLines="1"
							android:lines="1"
							android:tag="false"
							android:gravity="center_vertical"
							android:visibility="gone"
							android:paddingTop="0dp"
							android:paddingEnd="1dp"
							android:textAlignment="center"
							android:textAllCaps="false"
							android:textColor="#a5a5a5"
							android:layout_toEndOf="@+id/time_text"
							android:layout_below="@+id/username" />
						<ImageView
							android:layout_width="23dp"
							android:layout_height="23dp"
							android:id="@+id/moreicon"
							android:layout_marginStart="2dp"
							android:layout_marginEnd="12dp"
							android:src="@drawable/icon_post_more_vector"
							android:layout_centerVertical="true"
							android:tag="false"
							android:paddingTop="0dp"
							android:paddingStart="4dp"
							android:paddingEnd="2dp"
							android:tint="@color/textLight_color"
							android:layout_alignParentEnd="true" />
					</RelativeLayout>
					<WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
						android:id="@+id/description"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="start"
						android:gravity="center|start"
						android:layout_marginStart="8dp"
						android:layout_marginEnd="8dp"
						android:layout_marginTop="6dp"
						android:layout_marginBottom="6dp"
						android:paddingBottom="10dp"
						android:paddingStart="10dp"
						android:textColor="@color/textLight_color"
						android:paddingEnd="10dp"
						android:textAlignment="textStart"
						android:textAllCaps="false"
						android:hyphenationFrequency="none"
						android:textSize="14sp" />
				</LinearLayout>
				<FrameLayout
					android:id="@+id/root"
					android:layout_marginTop="7dp"
					android:layout_width="match_parent"
					android:minHeight="220dp"
					android:layout_height="wrap_content" />
				<LinearLayout
					android:id="@+id/postEvent"
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<RelativeLayout
						android:gravity="fill_horizontal"
						android:orientation="horizontal"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_width="match_parent">
						<TextView
							android:id="@+id/Likecount"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="12dp"
							android:layout_marginEnd="11dp"
							android:gravity="start|center"
							android:layout_gravity="center"
							android:textColor="@color/textLight_color"
							android:textSize="12sp"
							android:maxLines="1"
							android:lines="1"
							android:text=""
							android:layout_alignParentStart="true"
							android:layout_alignParentTop="true" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/Commentcount"
							android:textSize="12sp"
							android:layout_alignParentTop="true"
							android:gravity="end"
							android:layout_marginStart="11dp"
							android:layout_marginEnd="11dp"
							android:tag="false"
							android:layout_gravity="end"
							android:text=""
							android:textColor="@color/textLight_color"
							android:drawableTint="@color/textLight_color"
							android:drawablePadding="5dp"
							android:drawableStart="@drawable/icon_post_comment_vector"
							android:maxLines="1"
							android:lines="1"
							android:paddingTop="0dp"
							android:textAlignment="center"
							android:textAllCaps="false"
							android:layout_alignParentEnd="true" />
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/viewcount"
							android:textSize="12sp"
							android:layout_alignParentTop="true"
							android:gravity="end"
							android:layout_marginStart="11dp"
							android:layout_marginEnd="11dp"
							android:tag="false"
							android:layout_gravity="end"
							android:text=""
							android:textColor="@color/textLight_color"
							android:maxLines="1"
							android:lines="1"
							android:paddingTop="0dp"
							android:textAlignment="center"
							android:textAllCaps="false"
							android:layout_toStartOf="@+id/Commentcount" />
					</RelativeLayout>
					<View
						android:id="@+id/view"
						android:layout_below="@+id/Likecount"
						android:layout_width="match_parent"
						android:layout_height="0.9dp"
						android:layout_marginTop="4dp"
						android:layout_marginStart="7dp"
						android:layout_marginEnd="7dp"
						android:layout_marginBottom="0dp"
						android:layout_centerHorizontal="true"
						android:background="?attr/colorDivider" />
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="40dp"
						android:layout_marginStart="4dp"
						android:layout_marginEnd="4dp"
						android:layout_gravity="bottom|center_horizontal"
						android:id="@+id/linerSecondReaction"
						android:gravity="center_horizontal"
						android:orientation="horizontal"
						android:weightSum="4">
						<LinearLayout
							android:gravity="center"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:layout_width="0dp">
							<WoWonder.Library.Anjo.ReactButton
								android:id="@+id/ReactButton"
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:gravity="center"
								android:layout_gravity="center_horizontal"
								android:layout_marginStart="5dp"
								android:textSize="14sp"
								android:paddingStart="4dp"
								android:paddingEnd="4dp"
								android:textColor="@color/textLight_color"
								android:tint="@color/textLight_color"
								style="?android:attr/borderlessButtonStyle"
								android:textAllCaps="false"
								android:drawablePadding="10dp" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/SecondReactionLinearLayout"
							android:gravity="center"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:clickable="true"
							android:focusable="true"
							android:foreground="?attr/selectableItemBackground"
							android:layout_width="0dp">
							<TextView
								android:id="@+id/SecondReactionText"
								android:layout_width="wrap_content"
								android:gravity="center"
								android:layout_gravity="center_horizontal"
								android:layout_height="match_parent"
								android:layout_marginStart="7dp"
								android:textSize="14sp"
								android:paddingStart="4dp"
								android:paddingEnd="4dp"
								android:textColor="@color/textLight_color"
								android:drawableTint="@color/textLight_color"
								android:drawablePadding="7dp"
								android:drawableStart="@drawable/icon_post_wonder_vector"
								android:text="@string/Btn_Wonder"
								android:layout_marginBottom="0dp"
								android:layout_marginEnd="2dp" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/CommentLinearLayout"
							android:gravity="center"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:clickable="true"
							android:focusable="true"
							android:foreground="?attr/selectableItemBackground"
							android:layout_width="0dp">
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:gravity="center"
								android:layout_gravity="center_horizontal"
								android:paddingStart="4dp"
								android:paddingEnd="4dp"
								android:id="@+id/CommentText"
								android:textSize="14sp"
								android:textColor="@color/textLight_color"
								android:drawableTint="@color/textLight_color"
								android:drawablePadding="8dp"
								android:drawableStart="@drawable/icon_post_comment_vector"
								android:layout_marginStart="5dp"
								android:layout_marginEnd="7dp"
								android:layout_marginBottom="0dp"
								android:text="@string/Lbl_Comment" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/ShareLinearLayout"
							android:gravity="center"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:clickable="true"
							android:focusable="true"
							android:foreground="?attr/selectableItemBackground"
							android:layout_width="0dp">
							<TextView
								android:id="@+id/ShareText"
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:gravity="center"
								android:layout_gravity="center_horizontal"
								android:paddingStart="4dp"
								android:paddingEnd="4dp"
								android:layout_marginStart="7dp"
								android:textSize="14sp"
								android:drawableTint="@color/textLight_color"
								android:drawablePadding="7dp"
								android:drawableStart="@drawable/icon_post_share_vector"
								android:textColor="@color/textLight_color"
								android:text="@string/Lbl_Share"
								android:layout_marginEnd="4dp" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</com.google.android.material.appbar.CollapsingToolbarLayout>
	</com.google.android.material.appbar.AppBarLayout>
  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		android:id="@+id/swipeRefreshLayout"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recycler_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_behavior="@string/appbar_scrolling_view_behavior" />
		</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>