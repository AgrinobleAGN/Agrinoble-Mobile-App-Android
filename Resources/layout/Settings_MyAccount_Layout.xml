<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
	android:background="?attr/colorBubble"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	 <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:theme="@style/ToolbarTheme"
            app:title="@string/Lbl_Update_DataProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="?attr/colorFill">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorFill"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/lyt_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">
            <!--Name Section -->
            <LinearLayout
                android:id="@+id/LayoutName"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:gravity="start|center_vertical">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_user_2"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/NameEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:hint="@string/Lbl_Username"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp" />
            </LinearLayout>     
            <!--Email Section -->
            <LinearLayout
                android:id="@+id/LayoutEmail"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_email1"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/EmailEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/Lbl_Email"
                    android:inputType="textEmailSubject"
                    android:textSize="14sp"
						android:gravity="start|center_vertical"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:layout_marginStart="15dp" />
            </LinearLayout>
            <!--Birthday Section -->
            <LinearLayout
                android:id="@+id/LayoutBirthday" 
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_action_birthday"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/BirthdayEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/Lbl_Birthday"
                    android:textSize="14sp"
						android:gravity="start|center_vertical"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:layout_marginStart="15dp" />
            </LinearLayout>
            <!--Gender Section -->
            <LinearLayout
                android:id="@+id/LayoutGender"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_action_genders"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/GenderEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/Lbl_Gender"
                    android:textSize="14sp"
						android:gravity="start|center_vertical"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:layout_marginStart="15dp" />
            </LinearLayout>
            <!--Country Section -->
            <LinearLayout
	            android:id="@+id/LayoutCountry"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_share_flag"/>
                </RelativeLayout>
	            <EditText
		            android:id="@+id/CountryEditText"
		            style="@style/EditTextNormalStyle"
		            android:layout_width="match_parent"
		            android:layout_height="45dp"
		            android:hint="@string/Lbl_Country"
		            android:textSize="14sp"
						android:gravity="start|center_vertical"
                    android:background="@drawable/round_gray_border"
                    android:paddingStart="15dp"
                    android:layout_marginStart="15dp" />
            </LinearLayout>  
            <Button
                android:id="@+id/SaveButton"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/follow_colored_button"
                android:text="@string/Lbl_Save"
                android:textAllCaps="false"
                android:textColor="@color/gnt_white"
                android:textSize="14sp"/>
            <View 
                android:layout_height="20dp"
                android:layout_width="match_parent" />
            <WoWonder.Helpers.Ads.TemplateView
                android:id="@+id/my_template"
                android:padding="8dp"
                android:visibility="gone"
                app:gnt_template_type="@layout/gnt_medium_template_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            <View 
				android:layout_height="?android:attr/actionBarSize"
                android:layout_width="match_parent" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView> 
</LinearLayout>
