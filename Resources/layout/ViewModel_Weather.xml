<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/weather_background"
    android:orientation="vertical">

	<TextView
	    android:id="@+id/textWeather"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
	    android:textSize="16sp"
	    android:textColor="@color/gnt_white"
	    android:text="@string/Lbl_Weather"/> 

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">
	    <ImageView
            android:id="@+id/Image" 
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <TextView 
            android:id="@+id/subText" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginStart="20dp"
            android:textSize="96sp"
            android:textColor="@color/gnt_white"
            android:focusable="false"
            android:lines="1"
            android:maxLines="1"  />  
    </LinearLayout>
    
	<TextView 
		android:id="@+id/PlaceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp" 
	    android:textColor="@color/gnt_white"
        android:focusable="false"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:clickable="false"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/HeadText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
	    android:textColor="@color/gnt_white"
        android:textSize="15dp" 
        android:focusable="false"
        android:textStyle="bold"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:clickable="false"
        android:textAlignment="textStart" />  
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_weather_mph"/>
                <TextView
                    android:id="@+id/tv_mph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/gnt_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/gnt_white"
                    android:text="@string/Lbl_Wind"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:textSize="10sp"
                android:text="@string/Lbl_mph"
                android:textColor="@color/gnt_white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_weather_rain"/>
                <TextView
                    android:id="@+id/tv_rain_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/gnt_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/gnt_white"
                    android:text="@string/Lbl_Rain"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:textSize="10sp"
                android:text="%"
                android:textColor="@color/gnt_white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_weather_humidity"/>
                <TextView
                    android:id="@+id/tv_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/gnt_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/gnt_white"
                    android:text="@string/Lbl_Humidity"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:textSize="10sp"
                android:text="%"
                android:textColor="@color/gnt_white"/>
        </LinearLayout>
    </LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
        android:layout_marginTop="25dp"
		android:background="@color/gnt_white" /> 
    <LinearLayout
        android:id="@+id/LLWeatherItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_horizontal">
    </LinearLayout>
</LinearLayout> 