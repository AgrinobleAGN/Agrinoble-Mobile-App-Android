<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <refractored.controls.CircleImageView
            android:id="@+id/userAvatar"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/textLight_color"
            android:src="@drawable/imageplacholder_circle" />
        <androidx.appcompat.widget.AppCompatTextView
            android:hyphenationFrequency="none"
            android:id="@+id/username"
            android:inputType="textMultiLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@+id/userAvatar"
            android:text="@string/Lbl_LoadingUsername"
            
            android:textSize="14sp"
            android:maxLines="1"
            android:lines="1"
            android:lineSpacingExtra="3dp"
            android:paddingTop="7dp"
            android:paddingBottom="2dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/userAvatar"
            android:layout_below="@+id/username"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_text"
                android:textSize="11sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="1dp"
                android:maxLines="1"
                android:lines="1"
                android:tag="false"
                android:paddingTop="0dp"
                android:paddingEnd="1dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#a5a5a5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconloca"
                android:textSize="11sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="7dp"
                android:maxLines="1"
                android:lines="1"
                android:tag="false"
                android:text="Ic"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#a5a5a5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textloc"
                android:textSize="11sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="7dp"
                android:maxLines="1"
                android:lines="1"
                android:tag="false"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#a5a5a5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sponsored"
                android:textSize="16sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="10dp"
                android:maxLines="1"
                android:lines="1"
                android:tag="false"
                android:text="@string/Lbl_Sponsored"
                android:paddingTop="0dp"
                android:paddingStart="4dp"
                android:paddingEnd="2dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/accent" />
            <ImageView
              android:layout_width="23dp"
              android:layout_height="23dp"
              android:id="@+id/moreicon"
              android:layout_marginStart="2dp"
              android:layout_marginEnd="12dp"
              android:src="@drawable/icon_post_more_vector"
              android:layout_centerVertical="true"
              android:tag="false"
              android:paddingTop="0dp"
              android:paddingStart="4dp"
              android:paddingEnd="2dp"
              android:tint="#b0b0b0"
              android:layout_alignParentEnd="true" />
        </LinearLayout>
    </RelativeLayout>
    <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="center|start"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="3dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:hyphenationFrequency="none"
        android:textSize="14sp"
         />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/IconLink"
            android:textSize="11sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:lines="1"
            android:tag="false"
            android:text="Ic"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#a5a5a5" />
        <com.luseen.autolinklibrary.AutoLinkTextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center|start"
            android:layout_marginStart="7dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="6dp"
            android:paddingBottom="10dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:hyphenationFrequency="none"
            android:textSize="14sp"
             />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:background="?attr/colorDivider" />
    <LinearLayout
        android:background="@drawable/center_content_profile_scroll_over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linklinearLayout"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="130dp" >
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="150dp"
                android:layout_marginBottom="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/Cover_image"
                android:layout_marginTop="0dp" />
            <TextView
                android:id="@+id/linkUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/textLight_color"
                android:textSize="13dp"
                android:ellipsize="none"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="4dp"
                android:focusable="false"
                android:clickable="false"
                android:layout_alignParentBottom="true"
                android:translationY="-4dp"
                android:background="#90000000" />
        </RelativeLayout>
        <TextView
            android:id="@+id/postLinkTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="3dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/postLinkContent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="1dp"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>