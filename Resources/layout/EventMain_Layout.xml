<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded"
	android:background="?attr/colorFill"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/mainAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
                app:theme="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="?attr/colorFill"
            app:layout_scrollFlags="scroll|enterAlways">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Create"
                android:layout_gravity="end"
                android:textSize="16sp"
				android:padding="15dp" 
                android:layout_marginEnd="10dp"
                android:id="@+id/toolbar_title" />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="?attr/colorFill">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                app:tabTextColor="@color/accent"
                app:tabBackground="@drawable/tab_round_selector"
                app:tabTextAppearance="?android:attr/textAppearanceSmall"
                app:tabMode="scrollable"
                app:tabGravity="center"
                app:tabMaxWidth="0dp"
                app:layout_collapseMode="pin"
                app:tabSelectedTextColor="@color/gnt_white"
                app:tabIndicator="@null"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:tabPaddingStart="10dp"
                app:tabPaddingEnd="10dp"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <HorizontalScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainAppBarLayout"
	    android:background="?attr/colorFill"
        android:visibility="gone">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <RadioButton
                android:id="@+id/rb_event_all"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_selector2"
                android:button="@android:drawable/screen_background_dark_transparent"
                android:textColor="@drawable/text_selector2"
                android:text="@string/Lbl_All_Events"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingStart="23dp"
                android:paddingEnd="23dp"/>
            <RadioButton
                android:id="@+id/rb_event_going"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_selector2"
                android:button="@android:drawable/screen_background_dark_transparent"
                android:textColor="@drawable/text_selector2"
                android:text="@string/Lbl_Going"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingStart="23dp"
                android:paddingEnd="23dp"/>
            <RadioButton
                android:id="@+id/rb_invited_event"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_selector2"
                android:button="@android:drawable/screen_background_dark_transparent"
                android:textColor="@drawable/text_selector2"
                android:text="@string/Lbl_Invited"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingStart="23dp"
                android:paddingEnd="23dp"/>
            <RadioButton
                android:id="@+id/rb_interested_event"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_selector2"
                android:button="@android:drawable/screen_background_dark_transparent"
                android:textColor="@drawable/text_selector2"
                android:text="@string/Lbl_Interested"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingStart="23dp"
                android:paddingEnd="23dp"/>
            <RadioButton
                android:id="@+id/rb_event_past"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_selector2"
                android:button="@android:drawable/screen_background_dark_transparent"
                android:textColor="@drawable/text_selector2"
                android:text="@string/Lbl_Past"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingStart="23dp"
                android:paddingEnd="23dp"/>
            <RadioButton
                android:id="@+id/rb_event_my"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_selector2"
                android:button="@android:drawable/screen_background_dark_transparent"
                android:textColor="@drawable/text_selector2"
                android:text="@string/Lbl_My_Events"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingStart="23dp"
                android:paddingEnd="23dp"/>
        </RadioGroup>
    </HorizontalScrollView> 
    <ViewStub
        android:id="@+id/viewStub"
        android:inflatedId="@+id/subView"
        android:layout="@layout/EmptyStateLayout"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainAppBarLayout"
        android:background="?attr/colorPrimary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@android:color/transparent"
        android:src="@drawable/ic_add"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        app:backgroundTint="@color/accent"
        android:layout_marginBottom="50dp"
        android:visibility="gone"/>
</RelativeLayout>