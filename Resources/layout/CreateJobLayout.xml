<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
	android:background="?attr/colorBubble"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">
	 <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
          app:theme="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="?attr/colorFill">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Create"
                android:layout_gravity="end"
                android:textSize="15sp"
                android:textStyle="bold"  
                android:padding="15dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/toolbar_title" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
           <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorBubble"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:id="@+id/lyt_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">
              <!--Image Section --> 
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/create_border_edit_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp"> 
                <RelativeLayout
                  android:layout_width="100dp"
                  android:layout_height="80dp"
                  android:background="?attr/colorBubble"> 
                  <ImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:src="@drawable/grey_offline" /> 
                </RelativeLayout> 
                <TextView
                  android:id="@+id/addImg"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" 
                  android:gravity="center"
                  android:text="@string/Lbl_SelectImage"
                  android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                   /> 
              </LinearLayout> 
              <!--Title Section -->
                <LinearLayout
                    android:id="@+id/LayoutTitle"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconTitle"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                      android:id="@+id/TitleEditText"
                      style="@style/EditTextNormalStyle"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:hint="@string/Lbl_JobTitle" 
                      android:textSize="15sp"
                      android:gravity="start"
                      android:background="@drawable/round_gray_border" 
                      android:layout_alignParentEnd="true"
                      android:layout_marginStart="3dp" />
                </LinearLayout>  
                <!--Location Section -->
                <LinearLayout
                    android:id="@+id/LayoutLocation"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_height="80dp">
                    <TextView
                        android:id="@+id/IconLocation"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="top|center"
                        android:layout_gravity="start"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/LocationEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/round_gray_border"
                        android:hint="@string/Lbl_Location"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>  
				 <!--Salary Range Section -->
                <LinearLayout
                    android:id="@+id/LayoutSalary"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconSalary"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/MinimumEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_weight="50"
                        android:ems="10"
                        android:layout_height="45dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:hint="@string/Lbl_minimum"
                        android:textSize="15sp"
                        android:maxLines="1"
						 android:gravity="start"
                        android:inputType="number"
                        android:layout_marginStart="3dp" />
                    <EditText
                        android:id="@+id/MaximumEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent" 
                        android:layout_weight="50"
                        android:ems="10"
                        android:layout_height="45dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:hint="@string/Lbl_maximum"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:gravity="start"
                        android:inputType="number"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
				 <!--currency Section -->
                <LinearLayout
                    android:id="@+id/LayoutCurrency"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconCurrency"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/CurrencyEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_weight="50"
                        android:ems="10"
                        android:layout_height="45dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:hint="@string/Lbl_Currency"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:gravity="start"
                        android:inputType="textEmailAddress"
                        android:layout_marginStart="3dp" />
                    <EditText
                        android:id="@+id/SalaryDateEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_weight="50"
                        android:ems="10"
                        android:layout_height="45dp"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:hint="@string/Lbl_Date"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:gravity="start"
                        android:inputType="textEmailAddress"
                        android:layout_marginStart="3dp" />
                </LinearLayout> 
                <!--JobType Section -->
                <LinearLayout
                    android:id="@+id/LayoutJobType"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconJobType"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/JobTypeEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="@string/Lbl_JobType"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
              
                <!--Category Section -->
                <LinearLayout
                    android:id="@+id/LayoutCategory"
                    android:paddingTop="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IconCategory"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="#"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp" />
                    <EditText
                        android:id="@+id/CategoryEditText"
                        style="@style/EditTextNormalStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="@string/Lbl_Category"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:background="@drawable/round_gray_border"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp" />
                </LinearLayout>
                <!--Description Section -->
                <LinearLayout
                  android:id="@+id/LayoutDescription"
                  android:paddingTop="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginEnd="5dp"
                  android:layout_height="wrap_content">
                  <TextView
                    android:id="@+id/IconDescription"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="#"
                    android:gravity="top|center"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />
                  <EditText
                    android:id="@+id/DescriptionEditText"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/round_gray_border"
                    android:hint="@string/Lbl_Description"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp" />
                </LinearLayout>  
                <!--Questions --> 
                <LinearLayout
                  android:id="@+id/LayoutQuestions"
                  android:paddingTop="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginEnd="5dp"
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
                  <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorDivider" />
                  <TextView
                    android:id="@+id/TxtQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/Lbl_Questions"
                    android:gravity="start|center"
                    android:layout_gravity="start|center"
                    android:textSize="16sp"
                    
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp" /> 
                  <EditText
                    android:id="@+id/AddQuestionEditText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:padding="9dp"
                    
                    android:textColorHint="#b7b7b7"
                    android:textSize="13sp"
                    android:background="@drawable/create_border_edit_text"
                    android:hint="@string/Lbl_AddQuestion"
                    android:gravity="top|center"
                    android:layout_gravity="start|center"
                    android:layout_toEndOf="@+id/badge"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true" />
                </LinearLayout>  
                <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="5dp"
                  android:background="?attr/colorDivider" /> 
           
              <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Recyler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"   />
              <!--
                <ViewStub
                  android:id="@+id/viewStubQuestionOne"
                  android:inflatedId="@+id/subViewQuestionOne"
                  android:layout="@layout/ViewSub_Question_Add"
                  android:paddingTop="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginEnd="5dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" /> -->  
				 
                <View 
				    android:layout_height="?android:attr/actionBarSize"
                    android:layout_width="match_parent" /> 
            </LinearLayout>
        </androidx.core.widget.NestedScrollView> 

</LinearLayout>