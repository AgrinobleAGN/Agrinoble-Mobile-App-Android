<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="0dp">
   <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/Lbl_GroupDetails"
        android:layout_marginStart="15dp"/>-->
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginTop="15dp">
      <ImageView
        android:id="@+id/IconMembers"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="25dp"
        android:layout_centerInParent="true"
        android:tint="@color/accent"
        android:src="@drawable/ic_member" />
        <TextView
            android:id="@+id/membersText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:text="@string/Lbl_Members"/>
    </LinearLayout> 
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginTop="15dp">
      <ImageView
        android:id="@+id/IconPrivacy"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="25dp"
        android:layout_centerInParent="true"
        android:tint="@color/accent"
        android:src="@drawable/ic_profile_website" />
        <TextView
            android:id="@+id/PrivacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:text="@string/Radio_Public"/>
    </LinearLayout> 
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginTop="15dp">
      <ImageView
        android:id="@+id/IconCategory"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="25dp"
        android:layout_centerInParent="true"
        android:tint="@color/accent"
        android:src="@drawable/ic_price_tag" />
        <TextView
            android:id="@+id/CategoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp" />
    </LinearLayout> 
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginTop="15dp">
      <ImageView
        android:id="@+id/IconInvite"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="25dp"
        android:layout_centerInParent="true"
        android:tint="@color/accent"
        android:src="@drawable/ic_add_friends" />
        <TextView
            android:id="@+id/InviteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:text="@string/Lbl_AddYourFriendsToGroup"/>
    </LinearLayout> 
   <View
     android:layout_width="match_parent"
     android:layout_height="15dp" />
</LinearLayout>
